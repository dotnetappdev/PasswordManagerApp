<ContentDialog x:Class="PasswordManager.WinUi.Dialogs.PasswordDetailsDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer MaxHeight="600" MaxWidth="500">
        <StackPanel Spacing="16" Padding="16">
            
            <!-- Basic Information -->
            <StackPanel Spacing="8">
                <TextBlock Text="📋 Basic Information" 
                          FontSize="16" 
                          FontWeight="SemiBold"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Title:" Margin="0,0,12,8" FontWeight="SemiBold"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TitleText" Margin="0,0,0,8"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Type:" Margin="0,0,12,8" FontWeight="SemiBold"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TypeText" Margin="0,0,0,8"/>
                    
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Created:" Margin="0,0,12,8" FontWeight="SemiBold"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="CreatedText" Margin="0,0,0,8"/>
                    
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Modified:" Margin="0,0,12,8" FontWeight="SemiBold"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" x:Name="ModifiedText" Margin="0,0,0,8"/>
                    
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Description:" Margin="0,0,12,8" FontWeight="SemiBold" Visibility="Collapsed"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" x:Name="DescriptionText" 
                              TextWrapping="Wrap" 
                              Visibility="Collapsed"/>
                </Grid>
            </StackPanel>
            
            <!-- Login Details -->
            <StackPanel x:Name="LoginDetailsPanel" 
                       Spacing="12" 
                       Visibility="Collapsed">
                <TextBlock Text="🔐 Login Details" 
                          FontSize="16" 
                          FontWeight="SemiBold"/>
                
                <!-- Username -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Username/Email:" FontWeight="SemiBold" FontSize="12"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Grid.Column="0" 
                                x:Name="UsernameText" 
                                IsReadOnly="True"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                Margin="0,0,8,0"/>
                        
                        <Button Grid.Column="1"
                               x:Name="CopyUsernameButton"
                               Content="📋 Copy"
                               Background="Transparent"
                               BorderThickness="1"
                               Click="CopyUsernameButton_Click"/>
                    </Grid>
                </StackPanel>
                
                <!-- Password -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Password:" FontWeight="SemiBold" FontSize="12"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Grid.Column="0" 
                                x:Name="PasswordText" 
                                IsReadOnly="True"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                FontFamily="Consolas"
                                Margin="0,0,8,0"/>
                        
                        <Button Grid.Column="1"
                               x:Name="TogglePasswordButton"
                               Content="👁️ Show"
                               Background="Transparent"
                               BorderThickness="1"
                               Click="TogglePasswordButton_Click"
                               Margin="0,0,4,0"/>
                        
                        <Button Grid.Column="2"
                               x:Name="CopyPasswordButton"
                               Content="📋 Copy"
                               Background="Transparent"
                               BorderThickness="1"
                               Click="CopyPasswordButton_Click"/>
                    </Grid>
                </StackPanel>
                
                <!-- URL -->
                <StackPanel Spacing="4">
                    <TextBlock x:Name="UrlLabel" 
                              Text="Website URL:" 
                              FontWeight="SemiBold" 
                              FontSize="12"
                              Visibility="Collapsed"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Grid.Column="0" 
                                x:Name="UrlText" 
                                IsReadOnly="True"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                Margin="0,0,8,0"
                                Visibility="Collapsed"/>
                        
                        <Button Grid.Column="1"
                               x:Name="OpenUrlButton"
                               Content="🌐 Open"
                               Background="Transparent"
                               BorderThickness="1"
                               Click="OpenUrlButton_Click"/>
                    </Grid>
                </StackPanel>
                
            </StackPanel>
            
            <!-- Security Information -->
            <StackPanel Spacing="8">
                <TextBlock Text="🛡️ Security Information" 
                          FontSize="16" 
                          FontWeight="SemiBold"/>
                
                <TextBlock Text="• This password is encrypted using AES-256 encryption" 
                          FontSize="12"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                
                <TextBlock Text="• Password revealing requires authentication" 
                          FontSize="12"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                          
                <TextBlock Text="• All clipboard copies are automatically cleared after 60 seconds" 
                          FontSize="12"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>
            
        </StackPanel>
    </ScrollViewer>
</ContentDialog>