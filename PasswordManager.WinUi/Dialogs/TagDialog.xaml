<?xml version="1.0" encoding="utf-8"?>
<ContentDialog x:Class="PasswordManager.WinUi.Dialogs.TagDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               Title="Manage Tag"
               PrimaryButtonText="Save"
               CloseButtonText="Cancel"
               DefaultButton="Primary"
               Style="{StaticResource DefaultContentDialogStyle}">

    <ScrollViewer MaxHeight="400" VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="20" Width="400">
            
            <!-- Tag Name -->
            <StackPanel Spacing="8">
                <TextBlock Text="Tag Name" 
                          Style="{StaticResource ModernCaptionStyle}"
                          FontWeight="SemiBold"/>
                <TextBox x:Name="TagNameTextBox"
                        PlaceholderText="Enter tag name..."
                        Style="{StaticResource ModernTextBoxStyle}"
                        MaxLength="50"/>
            </StackPanel>
            
            <!-- Tag Description -->
            <StackPanel Spacing="8">
                <TextBlock Text="Description" 
                          Style="{StaticResource ModernCaptionStyle}"
                          FontWeight="SemiBold"/>
                <TextBox x:Name="TagDescriptionTextBox"
                        PlaceholderText="Enter tag description (optional)..."
                        Style="{StaticResource ModernTextBoxStyle}"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        MaxHeight="80"
                        MaxLength="200"/>
            </StackPanel>

            <!-- Tag Color -->
            <StackPanel Spacing="8">
                <TextBlock Text="Tag Color" 
                          Style="{StaticResource ModernCaptionStyle}"
                          FontWeight="SemiBold"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <ComboBox x:Name="TagColorComboBox"
                             Grid.Column="0"
                             PlaceholderText="Select color..."
                             Style="{StaticResource ModernComboBoxStyle}"
                             SelectedIndex="0">
                        <ComboBoxItem>
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <Border Background="#3b82f6" CornerRadius="4" Width="16" Height="16"/>
                                <TextBlock Text="Blue" FontWeight="Medium"/>
                            </StackPanel>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <Border Background="#10b981" CornerRadius="4" Width="16" Height="16"/>
                                <TextBlock Text="Green" FontWeight="Medium"/>
                            </StackPanel>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <Border Background="#f59e0b" CornerRadius="4" Width="16" Height="16"/>
                                <TextBlock Text="Orange" FontWeight="Medium"/>
                            </StackPanel>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <Border Background="#ef4444" CornerRadius="4" Width="16" Height="16"/>
                                <TextBlock Text="Red" FontWeight="Medium"/>
                            </StackPanel>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <Border Background="#8b5cf6" CornerRadius="4" Width="16" Height="16"/>
                                <TextBlock Text="Purple" FontWeight="Medium"/>
                            </StackPanel>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <Border Background="#ec4899" CornerRadius="4" Width="16" Height="16"/>
                                <TextBlock Text="Pink" FontWeight="Medium"/>
                            </StackPanel>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <Border Background="#6b7280" CornerRadius="4" Width="16" Height="16"/>
                                <TextBlock Text="Gray" FontWeight="Medium"/>
                            </StackPanel>
                        </ComboBoxItem>
                    </ComboBox>
                    
                    <Border Grid.Column="1"
                           x:Name="ColorPreview"
                           Background="#3b82f6"
                           CornerRadius="8"
                           Width="32"
                           Height="32"
                           Margin="12,0,0,0"/>
                </Grid>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</ContentDialog>