<?xml version="1.0" encoding="utf-8"?>
<ContentDialog x:Class="PasswordManager.WinUi.Dialogs.ItemTypeSelectionDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               Title="Add New Item"
               PrimaryButtonText="Select"
               CloseButtonText="Cancel"
               PrimaryButtonClick="ContentDialog_PrimaryButtonClick">

    <ScrollViewer MaxHeight="600" MaxWidth="600">
        <StackPanel Spacing="16" Padding="16">
            
            <TextBlock Text="Choose the type of item you want to add:" 
                      FontSize="16" 
                      FontWeight="SemiBold"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,16"/>
            
            <!-- Main Category Grid - 3 columns layout like 1Password -->
            <Grid x:Name="MainCategoryGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Top row - Main categories -->
                <Button x:Name="LoginButton" Grid.Row="0" Grid.Column="0" Click="CategoryButton_Click" Tag="Login" 
                        Style="{StaticResource CardButtonStyle}" Margin="4" MinHeight="80">
                    <StackPanel>
                        <TextBlock Text="🔐" FontSize="32" HorizontalAlignment="Center"/>
                        <TextBlock Text="Login" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <Button x:Name="SecureNoteButton" Grid.Row="0" Grid.Column="1" Click="CategoryButton_Click" Tag="Secure Note"
                        Style="{StaticResource CardButtonStyle}" Margin="4" MinHeight="80">
                    <StackPanel>
                        <TextBlock Text="📝" FontSize="32" HorizontalAlignment="Center"/>
                        <TextBlock Text="Secure Note" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <Button x:Name="CreditCardButton" Grid.Row="0" Grid.Column="2" Click="CategoryButton_Click" Tag="Credit Card"
                        Style="{StaticResource CardButtonStyle}" Margin="4" MinHeight="80">
                    <StackPanel>
                        <TextBlock Text="💳" FontSize="32" HorizontalAlignment="Center"/>
                        <TextBlock Text="Credit Card" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <!-- Second row -->
                <Button x:Name="IdentityButton" Grid.Row="1" Grid.Column="0" Click="CategoryButton_Click" Tag="Identity"
                        Style="{StaticResource CardButtonStyle}" Margin="4" MinHeight="80">
                    <StackPanel>
                        <TextBlock Text="👤" FontSize="32" HorizontalAlignment="Center"/>
                        <TextBlock Text="Identity" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <Button x:Name="PasswordButton" Grid.Row="1" Grid.Column="1" Click="CategoryButton_Click" Tag="Password"
                        Style="{StaticResource CardButtonStyle}" Margin="4" MinHeight="80">
                    <StackPanel>
                        <TextBlock Text="🔑" FontSize="32" HorizontalAlignment="Center"/>
                        <TextBlock Text="Password" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <Button x:Name="DocumentButton" Grid.Row="1" Grid.Column="2" Click="CategoryButton_Click" Tag="Document"
                        Style="{StaticResource CardButtonStyle}" Margin="4" MinHeight="80">
                    <StackPanel>
                        <TextBlock Text="📄" FontSize="32" HorizontalAlignment="Center"/>
                        <TextBlock Text="Document" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <!-- Show Less/More Button -->
                <Button x:Name="ShowMoreButton" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" 
                        Content="Show less" Click="ShowMoreButton_Click" 
                        Background="Transparent" BorderThickness="0"
                        HorizontalAlignment="Center" Margin="0,16,0,0"/>
                
                <!-- Extended categories (initially hidden) -->
                <StackPanel x:Name="ExtendedCategoriesPanel" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" 
                           Visibility="Collapsed">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Row 1 -->
                        <Button x:Name="SSHKeyButton" Grid.Row="0" Grid.Column="0" Click="CategoryButton_Click" Tag="SSH Key"
                                Style="{StaticResource CardButtonStyle}" Margin="4" MinHeight="80">
                            <StackPanel>
                                <TextBlock Text="🔗" FontSize="32" HorizontalAlignment="Center"/>
                                <TextBlock Text="SSH Key" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <Button x:Name="APICredentialsButton" Grid.Row="0" Grid.Column="1" Click="CategoryButton_Click" Tag="API Credentials"
                                Style="{StaticResource CardButtonStyle}" Margin="4" MinHeight="80">
                            <StackPanel>
                                <TextBlock Text="&lt;/&gt;" FontSize="24" HorizontalAlignment="Center"/>
                                <TextBlock Text="API Credentials" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <Button x:Name="BankAccountButton" Grid.Row="0" Grid.Column="2" Click="CategoryButton_Click" Tag="Bank Account"
                                Style="{StaticResource CardButtonStyle}" Margin="4" MinHeight="80">
                            <StackPanel>
                                <TextBlock Text="🏦" FontSize="32" HorizontalAlignment="Center"/>
                                <TextBlock Text="Bank Account" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <!-- Additional rows would continue here... -->
                    </Grid>
                </StackPanel>
            </Grid>
            
        </StackPanel>
    </ScrollViewer>
</ContentDialog>