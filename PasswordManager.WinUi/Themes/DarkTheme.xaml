<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Enhanced Dark Theme Color Palette - 1Password Style -->
    <Color x:Key="DarkModernPrimaryColor">#3b82f6</Color>
    <Color x:Key="DarkModernPrimaryLightColor">#60a5fa</Color>
    <Color x:Key="DarkModernPrimaryDarkColor">#2563eb</Color>
    <Color x:Key="DarkModernAccentColor">#ec4899</Color>
    <Color x:Key="DarkModernAccentLightColor">#f472b6</Color>
    <Color x:Key="DarkModernSuccessColor">#10b981</Color>
    <Color x:Key="DarkModernWarningColor">#f59e0b</Color>
    <Color x:Key="DarkModernErrorColor">#ef4444</Color>

    <!-- Enhanced Dark Background Colors - 1Password Style -->
    <Color x:Key="DarkModernBackgroundColor">#1a1a1a</Color>
    <Color x:Key="DarkModernSurfaceColor">#2d2d2d</Color>
    <Color x:Key="DarkModernCardColor">#3a3a3a</Color>
    <Color x:Key="DarkModernElevatedSurfaceColor">#404040</Color>
    <Color x:Key="DarkModernBorderColor">#4a4a4a</Color>

    <!-- Enhanced Dark Text Colors -->
    <Color x:Key="DarkModernTextPrimaryColor">#e5e5e5</Color>
    <Color x:Key="DarkModernTextSecondaryColor">#b3b3b3</Color>
    <Color x:Key="DarkModernTextTertiaryColor">#808080</Color>

    <!-- Dark Theme Brushes -->
    <SolidColorBrush x:Key="DarkModernPrimaryBrush"
            Color="{StaticResource DarkModernPrimaryColor}"/>
    <SolidColorBrush x:Key="DarkModernPrimaryLightBrush"
            Color="{StaticResource DarkModernPrimaryLightColor}"/>
    <SolidColorBrush x:Key="DarkModernPrimaryDarkBrush"
            Color="{StaticResource DarkModernPrimaryDarkColor}"/>
    <SolidColorBrush x:Key="DarkModernAccentBrush"
            Color="{StaticResource DarkModernAccentColor}"/>
    <SolidColorBrush x:Key="DarkModernAccentLightBrush"
            Color="{StaticResource DarkModernAccentLightColor}"/>
    <SolidColorBrush x:Key="DarkModernSuccessBrush"
            Color="{StaticResource DarkModernSuccessColor}"/>
    <SolidColorBrush x:Key="DarkModernWarningBrush"
            Color="{StaticResource DarkModernWarningColor}"/>
    <SolidColorBrush x:Key="DarkModernErrorBrush"
            Color="{StaticResource DarkModernErrorColor}"/>

    <SolidColorBrush x:Key="DarkModernBackgroundBrush"
            Color="{StaticResource DarkModernBackgroundColor}"/>
    <SolidColorBrush x:Key="DarkModernSurfaceBrush"
            Color="{StaticResource DarkModernSurfaceColor}"/>
    <SolidColorBrush x:Key="DarkModernCardBrush"
            Color="{StaticResource DarkModernCardColor}"/>
    <SolidColorBrush x:Key="DarkModernElevatedSurfaceBrush"
            Color="{StaticResource DarkModernElevatedSurfaceColor}"/>
    <SolidColorBrush x:Key="DarkModernBorderBrush"
            Color="{StaticResource DarkModernBorderColor}"/>

    <SolidColorBrush x:Key="DarkModernTextPrimaryBrush"
            Color="{StaticResource DarkModernTextPrimaryColor}"/>
    <SolidColorBrush x:Key="DarkModernTextSecondaryBrush"
            Color="{StaticResource DarkModernTextSecondaryColor}"/>
    <SolidColorBrush x:Key="DarkModernTextTertiaryBrush"
            Color="{StaticResource DarkModernTextTertiaryColor}"/>

    <!-- NavigationView Dark Theme Overrides -->
    <SolidColorBrush x:Key="DarkNavigationViewDefaultPaneBackground" Color="{StaticResource DarkModernSurfaceColor}"/>
    <SolidColorBrush x:Key="DarkNavigationViewExpandedPaneBackground" Color="{StaticResource DarkModernSurfaceColor}"/>
    <SolidColorBrush x:Key="DarkNavigationViewTopPaneBackground" Color="{StaticResource DarkModernSurfaceColor}"/>

    <!-- Dark Theme Gradients -->
    <LinearGradientBrush x:Key="DarkModernPrimaryGradientBrush"
            StartPoint="0,0"
            EndPoint="1,1">
        <GradientStop Color="{StaticResource DarkModernPrimaryColor}"
                Offset="0"/>
        <GradientStop Color="{StaticResource DarkModernPrimaryLightColor}"
                Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="DarkModernAccentGradientBrush"
            StartPoint="0,0"
            EndPoint="1,1">
        <GradientStop Color="{StaticResource DarkModernAccentColor}"
                Offset="0"/>
        <GradientStop Color="{StaticResource DarkModernAccentLightColor}"
                Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="DarkModernCardGradientBrush"
            StartPoint="0,0"
            EndPoint="0,1">
        <GradientStop Color="{StaticResource DarkModernCardColor}"
                Offset="0"/>
        <GradientStop Color="{StaticResource DarkModernSurfaceColor}"
                Offset="1"/>
    </LinearGradientBrush>

    <!-- Dark Theme Navigation Styles -->
    <Style x:Key="DarkModernNavigationViewStyle"
            TargetType="NavigationView">
        <Setter Property="Background"
                Value="{StaticResource DarkModernSurfaceBrush}"/>
        <Setter Property="IsPaneToggleButtonVisible"
                Value="True"/>
        <Setter Property="IsBackButtonVisible"
                Value="Collapsed"/>
        <Setter Property="OpenPaneLength"
                Value="320"/>
        <Setter Property="CompactModeThresholdWidth"
                Value="640"/>
        <Setter Property="ExpandedModeThresholdWidth"
                Value="1028"/>
        <Setter Property="PaneDisplayMode"
                Value="LeftMinimal"/>
    </Style>

    <!-- Dark Theme NavigationViewItem Style -->
    <Style x:Key="DarkModernNavigationViewItemStyle"
           TargetType="NavigationViewItem">
        <Setter Property="Foreground" Value="{StaticResource DarkModernTextPrimaryBrush}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="4,2"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="NavigationViewItem">
                    <Border x:Name="LayoutRoot"
                            Background="{TemplateBinding Background}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Margin="{TemplateBinding Margin}">
                        <Grid>
                            <Border x:Name="SelectionIndicator"
                                    Width="3"
                                    HorizontalAlignment="Left"
                                    Background="{StaticResource DarkModernPrimaryBrush}"
                                    CornerRadius="0,2,2,0"
                                    Opacity="0"/>
                            
                            <Grid x:Name="ContentGrid"
                                  Margin="16,8,16,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Icon -->
                                <ContentPresenter x:Name="Icon"
                                                Grid.Column="0"
                                                Content="{TemplateBinding Icon}"
                                                Margin="0,0,12,0"
                                                VerticalAlignment="Center"/>
                                
                                <!-- Content -->
                                <ContentPresenter x:Name="ContentPresenter"
                                                Grid.Column="1"
                                                Content="{TemplateBinding Content}"
                                                ContentTemplate="{TemplateBinding ContentTemplate}"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Left"/>
                                
                                <!-- Expand/Collapse Chevron -->
                                <FontIcon x:Name="ExpandCollapseChevron"
                                        Grid.Column="2"
                                        FontSize="12"
                                        Glyph="&#xE76C;"
                                        Foreground="{StaticResource DarkModernTextSecondaryBrush}"
                                        Visibility="Collapsed"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"/>
                            </Grid>
                        </Grid>
                        
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Target="LayoutRoot.Background" Value="#3a3a3a"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Target="LayoutRoot.Background" Value="#4a4a4a"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Selected">
                                    <VisualState.Setters>
                                        <Setter Target="LayoutRoot.Background" Value="#2d4a6b"/>
                                        <Setter Target="SelectionIndicator.Opacity" Value="1"/>
                                        <Setter Target="ContentPresenter.Foreground" Value="{StaticResource DarkModernPrimaryBrush}"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="PointerOverSelected">
                                    <VisualState.Setters>
                                        <Setter Target="LayoutRoot.Background" Value="#3d5a7b"/>
                                        <Setter Target="SelectionIndicator.Opacity" Value="1"/>
                                        <Setter Target="ContentPresenter.Foreground" Value="{StaticResource DarkModernPrimaryBrush}"/>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Dark Theme Content Dialog Styles -->
    <Style TargetType="ContentDialog">
        <Setter Property="Background" Value="{StaticResource DarkModernSurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource DarkModernTextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource DarkModernBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
    </Style>

    <!-- Dark Theme Content Dialog Button Styles -->
    <Style x:Key="DarkContentDialogButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource DarkModernPrimaryBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Margin" Value="4"/>
        <Setter Property="MinWidth" Value="120"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

</ResourceDictionary>