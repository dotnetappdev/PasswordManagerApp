<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Enhanced Dark Theme Color Palette - 1Password Style -->
    <Color x:Key="DarkModernPrimaryColor">#3b82f6</Color>
    <Color x:Key="DarkModernPrimaryLightColor">#60a5fa</Color>
    <Color x:Key="DarkModernPrimaryDarkColor">#2563eb</Color>
    <Color x:Key="DarkModernAccentColor">#ec4899</Color>
    <Color x:Key="DarkModernAccentLightColor">#f472b6</Color>
    <Color x:Key="DarkModernSuccessColor">#10b981</Color>
    <Color x:Key="DarkModernWarningColor">#f59e0b</Color>
    <Color x:Key="DarkModernErrorColor">#ef4444</Color>

    <!-- Enhanced Dark Background Colors - 1Password Style -->
    <Color x:Key="DarkModernBackgroundColor">#1a1a1a</Color>
    <Color x:Key="DarkModernSurfaceColor">#2d2d2d</Color>
    <Color x:Key="DarkModernCardColor">#3a3a3a</Color>
    <Color x:Key="DarkModernElevatedSurfaceColor">#404040</Color>
    <Color x:Key="DarkModernBorderColor">#4a4a4a</Color>

    <!-- Enhanced Dark Text Colors -->
    <Color x:Key="DarkModernTextPrimaryColor">#e5e5e5</Color>
    <Color x:Key="DarkModernTextSecondaryColor">#b3b3b3</Color>
    <Color x:Key="DarkModernTextTertiaryColor">#808080</Color>

    <!-- Dark Theme Brushes -->
    <SolidColorBrush x:Key="DarkModernPrimaryBrush"
            Color="{StaticResource DarkModernPrimaryColor}"/>
    <SolidColorBrush x:Key="DarkModernPrimaryLightBrush"
            Color="{StaticResource DarkModernPrimaryLightColor}"/>
    <SolidColorBrush x:Key="DarkModernPrimaryDarkBrush"
            Color="{StaticResource DarkModernPrimaryDarkColor}"/>
    <SolidColorBrush x:Key="DarkModernAccentBrush"
            Color="{StaticResource DarkModernAccentColor}"/>
    <SolidColorBrush x:Key="DarkModernAccentLightBrush"
            Color="{StaticResource DarkModernAccentLightColor}"/>
    <SolidColorBrush x:Key="DarkModernSuccessBrush"
            Color="{StaticResource DarkModernSuccessColor}"/>
    <SolidColorBrush x:Key="DarkModernWarningBrush"
            Color="{StaticResource DarkModernWarningColor}"/>
    <SolidColorBrush x:Key="DarkModernErrorBrush"
            Color="{StaticResource DarkModernErrorColor}"/>

    <SolidColorBrush x:Key="DarkModernBackgroundBrush"
            Color="{StaticResource DarkModernBackgroundColor}"/>
    <SolidColorBrush x:Key="DarkModernSurfaceBrush"
            Color="{StaticResource DarkModernSurfaceColor}"/>
    <SolidColorBrush x:Key="DarkModernCardBrush"
            Color="{StaticResource DarkModernCardColor}"/>
    <SolidColorBrush x:Key="DarkModernElevatedSurfaceBrush"
            Color="{StaticResource DarkModernElevatedSurfaceColor}"/>
    <SolidColorBrush x:Key="DarkModernBorderBrush"
            Color="{StaticResource DarkModernBorderColor}"/>

    <SolidColorBrush x:Key="DarkModernTextPrimaryBrush"
            Color="{StaticResource DarkModernTextPrimaryColor}"/>
    <SolidColorBrush x:Key="DarkModernTextSecondaryBrush"
            Color="{StaticResource DarkModernTextSecondaryColor}"/>
    <SolidColorBrush x:Key="DarkModernTextTertiaryBrush"
            Color="{StaticResource DarkModernTextTertiaryColor}"/>

    <!-- NavigationView Dark Theme Overrides -->
    <SolidColorBrush x:Key="DarkNavigationViewDefaultPaneBackground" Color="{StaticResource DarkModernSurfaceColor}"/>
    <SolidColorBrush x:Key="DarkNavigationViewExpandedPaneBackground" Color="{StaticResource DarkModernSurfaceColor}"/>
    <SolidColorBrush x:Key="DarkNavigationViewTopPaneBackground" Color="{StaticResource DarkModernSurfaceColor}"/>

    <!-- Dark Theme Gradients -->
    <LinearGradientBrush x:Key="DarkModernPrimaryGradientBrush"
            StartPoint="0,0"
            EndPoint="1,1">
        <GradientStop Color="{StaticResource DarkModernPrimaryColor}"
                Offset="0"/>
        <GradientStop Color="{StaticResource DarkModernPrimaryLightColor}"
                Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="DarkModernAccentGradientBrush"
            StartPoint="0,0"
            EndPoint="1,1">
        <GradientStop Color="{StaticResource DarkModernAccentColor}"
                Offset="0"/>
        <GradientStop Color="{StaticResource DarkModernAccentLightColor}"
                Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="DarkModernCardGradientBrush"
            StartPoint="0,0"
            EndPoint="0,1">
        <GradientStop Color="{StaticResource DarkModernCardColor}"
                Offset="0"/>
        <GradientStop Color="{StaticResource DarkModernSurfaceColor}"
                Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>