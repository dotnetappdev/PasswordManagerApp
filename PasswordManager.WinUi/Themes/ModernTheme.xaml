<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Enhanced Modern Color Palette - 1Password Style -->
    <Color x:Key="ModernPrimaryColor">#0066cc</Color>
    <Color x:Key="ModernPrimaryLightColor">#3b82f6</Color>
    <Color x:Key="ModernPrimaryDarkColor">#0047ab</Color>
    <Color x:Key="ModernAccentColor">#ec4899</Color>
    <Color x:Key="ModernAccentLightColor">#f472b6</Color>
    <Color x:Key="ModernSuccessColor">#10b981</Color>
    <Color x:Key="ModernWarningColor">#f59e0b</Color>
    <Color x:Key="ModernErrorColor">#ef4444</Color>

    <!-- Enhanced Background Colors - 1Password Style -->
    <Color x:Key="ModernBackgroundColor">#f8fafc</Color>
    <Color x:Key="ModernSurfaceColor">#ffffff</Color>
    <Color x:Key="ModernCardColor">#ffffff</Color>
    <Color x:Key="ModernElevatedSurfaceColor">#ffffff</Color>
    <Color x:Key="ModernBorderColor">#e1e5e9</Color>

    <!-- Dark theme variants -->
    <Color x:Key="ModernDarkBackgroundColor">#0F172A</Color>
    <Color x:Key="ModernDarkSurfaceColor">#1E293B</Color>
    <Color x:Key="ModernDarkCardColor">#334155</Color>

    <!-- Text Colors -->
    <Color x:Key="ModernTextPrimaryColor">#1E293B</Color>
    <Color x:Key="ModernTextSecondaryColor">#64748B</Color>
    <Color x:Key="ModernTextTertiaryColor">#94A3B8</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="ModernPrimaryBrush"
            Color="{StaticResource ModernPrimaryColor}"/>
    <SolidColorBrush x:Key="ModernPrimaryLightBrush"
            Color="{StaticResource ModernPrimaryLightColor}"/>
    <SolidColorBrush x:Key="ModernPrimaryDarkBrush"
            Color="{StaticResource ModernPrimaryDarkColor}"/>
    <SolidColorBrush x:Key="ModernAccentBrush"
            Color="{StaticResource ModernAccentColor}"/>
    <SolidColorBrush x:Key="ModernAccentLightBrush"
            Color="{StaticResource ModernAccentLightColor}"/>
    <SolidColorBrush x:Key="ModernSuccessBrush"
            Color="{StaticResource ModernSuccessColor}"/>
    <SolidColorBrush x:Key="ModernWarningBrush"
            Color="{StaticResource ModernWarningColor}"/>
    <SolidColorBrush x:Key="ModernErrorBrush"
            Color="{StaticResource ModernErrorColor}"/>

    <SolidColorBrush x:Key="ModernBackgroundBrush"
            Color="{StaticResource ModernBackgroundColor}"/>
    <SolidColorBrush x:Key="ModernSurfaceBrush"
            Color="{StaticResource ModernSurfaceColor}"/>
    <SolidColorBrush x:Key="ModernCardBrush"
            Color="{StaticResource ModernCardColor}"/>
    <SolidColorBrush x:Key="ModernElevatedSurfaceBrush"
            Color="{StaticResource ModernElevatedSurfaceColor}"/>
    <SolidColorBrush x:Key="ModernBorderBrush"
            Color="{StaticResource ModernBorderColor}"/>

    <SolidColorBrush x:Key="ModernTextPrimaryBrush"
            Color="{StaticResource ModernTextPrimaryColor}"/>
    <SolidColorBrush x:Key="ModernTextSecondaryBrush"
            Color="{StaticResource ModernTextSecondaryColor}"/>
    <SolidColorBrush x:Key="ModernTextTertiaryBrush"
            Color="{StaticResource ModernTextTertiaryColor}"/>

        <!-- NavigationView Pane Background Brushes (WinUI 3 theme resource overrides) -->
        <SolidColorBrush x:Key="NavigationViewDefaultPaneBackground" Color="{StaticResource ModernBackgroundColor}"/>
        <SolidColorBrush x:Key="NavigationViewExpandedPaneBackground" Color="{StaticResource ModernBackgroundColor}"/>
        <SolidColorBrush x:Key="NavigationViewTopPaneBackground" Color="{StaticResource ModernBackgroundColor}"/>

    <!-- Modern Gradient Brushes -->
    <LinearGradientBrush x:Key="ModernPrimaryGradientBrush"
            StartPoint="0,0"
            EndPoint="1,1">
        <GradientStop Color="{StaticResource ModernPrimaryColor}"
                Offset="0"/>
        <GradientStop Color="{StaticResource ModernPrimaryLightColor}"
                Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ModernAccentGradientBrush"
            StartPoint="0,0"
            EndPoint="1,1">
        <GradientStop Color="{StaticResource ModernAccentColor}"
                Offset="0"/>
        <GradientStop Color="{StaticResource ModernAccentLightColor}"
                Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ModernCardGradientBrush"
            StartPoint="0,0"
            EndPoint="0,1">
        <GradientStop Color="#FFFFFF"
                Offset="0"/>
        <GradientStop Color="#F8FAFC"
                Offset="1"/>
    </LinearGradientBrush>

    <!-- Modern Button Styles -->
    <Style x:Key="ModernPrimaryButtonStyle"
            TargetType="Button">
        <Setter Property="Background"
                Value="{StaticResource ModernPrimaryGradientBrush}"/>
        <Setter Property="Foreground"
                Value="White"/>
        <Setter Property="BorderThickness"
                Value="0"/>
        <Setter Property="CornerRadius"
                Value="12"/>
        <Setter Property="Padding"
                Value="24,12"/>
        <Setter Property="FontSize"
                Value="14"/>
        <Setter Property="FontWeight"
                Value="SemiBold"/>
    </Style>

    <Style x:Key="ModernSecondaryButtonStyle"
            TargetType="Button">
        <Setter Property="Background"
                Value="Transparent"/>
        <Setter Property="Foreground"
                Value="{StaticResource ModernPrimaryBrush}"/>
        <Setter Property="BorderBrush"
                Value="{StaticResource ModernPrimaryBrush}"/>
        <Setter Property="BorderThickness"
                Value="1.5"/>
        <Setter Property="CornerRadius"
                Value="12"/>
        <Setter Property="Padding"
                Value="24,12"/>
        <Setter Property="FontSize"
                Value="14"/>
        <Setter Property="FontWeight"
                Value="SemiBold"/>
    </Style>

    <!-- Modern Card Style -->
    <Style x:Key="ModernCardStyle"
            TargetType="Border">
        <Setter Property="Background"
                Value="{StaticResource ModernCardBrush}"/>
        <Setter Property="CornerRadius"
                Value="16"/>
        <Setter Property="Padding"
                Value="24"/>
        <Setter Property="BorderBrush"
                Value="{StaticResource ModernBorderBrush}"/>
        <Setter Property="BorderThickness"
                Value="1"/>
    </Style>

    <!-- Modern Elevated Card Style -->
    <Style x:Key="ModernElevatedCardStyle"
            TargetType="Border">
        <Setter Property="Background"
                Value="{StaticResource ModernElevatedSurfaceBrush}"/>
        <Setter Property="CornerRadius"
                Value="20"/>
        <Setter Property="Padding"
                Value="32"/>
        <Setter Property="BorderBrush"
                Value="{StaticResource ModernBorderBrush}"/>
        <Setter Property="BorderThickness"
                Value="1"/>
    </Style>

    <!-- Modern Input Styles -->
    <Style x:Key="ModernTextBoxStyle"
            TargetType="TextBox">
        <Setter Property="Background"
                Value="{StaticResource ModernSurfaceBrush}"/>
        <Setter Property="Foreground"
                Value="{StaticResource ModernTextPrimaryBrush}"/>
        <Setter Property="BorderBrush"
                Value="{StaticResource ModernBorderBrush}"/>
        <Setter Property="BorderThickness"
                Value="1"/>
        <Setter Property="CornerRadius"
                Value="12"/>
        <Setter Property="Padding"
                Value="16,12"/>
        <Setter Property="FontSize"
                Value="14"/>
    </Style>

    <Style x:Key="ModernAutoSuggestBoxStyle"
            TargetType="AutoSuggestBox">
        <Setter Property="Background"
                Value="{StaticResource ModernSurfaceBrush}"/>
        <Setter Property="Foreground"
                Value="{StaticResource ModernTextPrimaryBrush}"/>
        <Setter Property="BorderBrush"
                Value="{StaticResource ModernBorderBrush}"/>
        <Setter Property="BorderThickness"
                Value="1"/>
        <Setter Property="CornerRadius"
                Value="12"/>
        <Setter Property="FontSize"
                Value="14"/>
    </Style>

    <Style x:Key="ModernComboBoxStyle"
            TargetType="ComboBox">
        <Setter Property="Background"
                Value="{StaticResource ModernSurfaceBrush}"/>
        <Setter Property="Foreground"
                Value="{StaticResource ModernTextPrimaryBrush}"/>
        <Setter Property="BorderBrush"
                Value="{StaticResource ModernBorderBrush}"/>
        <Setter Property="BorderThickness"
                Value="1"/>
        <Setter Property="CornerRadius"
                Value="12"/>
        <Setter Property="Padding"
                Value="16,12"/>
        <Setter Property="FontSize"
                Value="14"/>
    </Style>

    <Style x:Key="ModernPasswordBoxStyle"
            TargetType="PasswordBox">
        <Setter Property="Background"
                Value="{StaticResource ModernSurfaceBrush}"/>
        <Setter Property="Foreground"
                Value="{StaticResource ModernTextPrimaryBrush}"/>
        <Setter Property="BorderBrush"
                Value="{StaticResource ModernBorderBrush}"/>
        <Setter Property="BorderThickness"
                Value="1"/>
        <Setter Property="CornerRadius"
                Value="12"/>
        <Setter Property="Padding"
                Value="16,12"/>
        <Setter Property="FontSize"
                Value="14"/>
    </Style>

    <!-- Modern Typography Styles -->
    <Style x:Key="ModernHeading1Style"
            TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="36"/>
        <Setter Property="FontWeight"
                Value="Bold"/>
        <Setter Property="Foreground"
                Value="{StaticResource ModernTextPrimaryBrush}"/>
    </Style>

    <Style x:Key="ModernHeading2Style"
            TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="28"/>
        <Setter Property="FontWeight"
                Value="Bold"/>
        <Setter Property="Foreground"
                Value="{StaticResource ModernTextPrimaryBrush}"/>
    </Style>

    <Style x:Key="ModernHeading3Style"
            TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="22"/>
        <Setter Property="FontWeight"
                Value="SemiBold"/>
        <Setter Property="Foreground"
                Value="{StaticResource ModernTextPrimaryBrush}"/>
    </Style>

    <Style x:Key="ModernBodyStyle"
            TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="16"/>
        <Setter Property="FontWeight"
                Value="Normal"/>
        <Setter Property="Foreground"
                Value="{StaticResource ModernTextPrimaryBrush}"/>
    </Style>

    <Style x:Key="ModernCaptionStyle"
            TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="14"/>
        <Setter Property="FontWeight"
                Value="Normal"/>
        <Setter Property="Foreground"
                Value="{StaticResource ModernTextSecondaryBrush}"/>
    </Style>

    <!-- Modern Navigation Styles -->
    <Style x:Key="ModernNavigationViewStyle"
            TargetType="NavigationView">
        <Setter Property="Background"
                Value="{StaticResource ModernSurfaceBrush}"/>
        <Setter Property="IsPaneToggleButtonVisible"
                Value="True"/>
        <Setter Property="IsBackButtonVisible"
                Value="Collapsed"/>
        <Setter Property="OpenPaneLength"
                Value="320"/>
        <Setter Property="CompactModeThresholdWidth"
                Value="640"/>
        <Setter Property="ExpandedModeThresholdWidth"
                Value="1028"/>
        <Setter Property="PaneDisplayMode"
                Value="LeftMinimal"/>
    </Style>

    <!-- Enhanced NavigationViewItem Style -->
    <Style x:Key="ModernNavigationViewItemStyle"
           TargetType="NavigationViewItem">
        <Setter Property="Foreground" Value="{StaticResource ModernTextPrimaryBrush}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="4,2"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="NavigationViewItem">
                    <Border x:Name="LayoutRoot"
                            Background="{TemplateBinding Background}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Margin="{TemplateBinding Margin}">
                        <Grid>
                            <Border x:Name="SelectionIndicator"
                                    Width="3"
                                    HorizontalAlignment="Left"
                                    Background="{StaticResource ModernPrimaryBrush}"
                                    CornerRadius="0,2,2,0"
                                    Opacity="0"/>
                            
                            <Grid x:Name="ContentGrid"
                                  Margin="16,8,16,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Icon -->
                                <ContentPresenter x:Name="Icon"
                                                Grid.Column="0"
                                                Content="{TemplateBinding Icon}"
                                                Margin="0,0,12,0"
                                                VerticalAlignment="Center"/>
                                
                                <!-- Content -->
                                <ContentPresenter x:Name="ContentPresenter"
                                                Grid.Column="1"
                                                Content="{TemplateBinding Content}"
                                                ContentTemplate="{TemplateBinding ContentTemplate}"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Left"/>
                                
                                <!-- Expand/Collapse Chevron -->
                                <FontIcon x:Name="ExpandCollapseChevron"
                                        Grid.Column="2"
                                        FontSize="12"
                                        Glyph="&#xE76C;"
                                        Foreground="{StaticResource ModernTextSecondaryBrush}"
                                        Visibility="Collapsed"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"/>
                            </Grid>
                        </Grid>
                        
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Target="LayoutRoot.Background" Value="#f8fcff"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Target="LayoutRoot.Background" Value="#e3f2fd"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Selected">
                                    <VisualState.Setters>
                                        <Setter Target="LayoutRoot.Background" Value="#e0f2fe"/>
                                        <Setter Target="SelectionIndicator.Opacity" Value="1"/>
                                        <Setter Target="ContentPresenter.Foreground" Value="{StaticResource ModernPrimaryBrush}"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="PointerOverSelected">
                                    <VisualState.Setters>
                                        <Setter Target="LayoutRoot.Background" Value="#d0ebfc"/>
                                        <Setter Target="SelectionIndicator.Opacity" Value="1"/>
                                        <Setter Target="ContentPresenter.Foreground" Value="{StaticResource ModernPrimaryBrush}"/>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Modern Navigation Button Style for Sidebar -->
    <Style x:Key="ModernNavigationButtonStyle" TargetType="Button">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource ModernTextPrimaryBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="RootBorder"
                            Background="{TemplateBinding Background}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter x:Name="ContentPresenter"
                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Target="RootBorder.Background" Value="#f8fcff"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Target="RootBorder.Background" Value="#e3f2fd"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <VisualState.Setters>
                                        <Setter Target="ContentPresenter.Foreground" Value="{StaticResource ModernTextTertiaryBrush}"/>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>