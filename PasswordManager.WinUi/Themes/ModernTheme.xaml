<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Modern Color Palette -->
    <Color x:Key="ModernPrimaryColor">#6366F1</Color>
    <Color x:Key="ModernPrimaryLightColor">#8B5FFF</Color>
    <Color x:Key="ModernPrimaryDarkColor">#4F46E5</Color>
    <Color x:Key="ModernAccentColor">#EC4899</Color>
    <Color x:Key="ModernAccentLightColor">#F472B6</Color>
    <Color x:Key="ModernSuccessColor">#10B981</Color>
    <Color x:Key="ModernWarningColor">#F59E0B</Color>
    <Color x:Key="ModernErrorColor">#EF4444</Color>
    
    <!-- Background Colors -->
    <Color x:Key="ModernBackgroundColor">#F8FAFC</Color>
    <Color x:Key="ModernSurfaceColor">#FFFFFF</Color>
    <Color x:Key="ModernCardColor">#FFFFFF</Color>
    <Color x:Key="ModernElevatedSurfaceColor">#FFFFFF</Color>
    
    <!-- Dark theme variants -->
    <Color x:Key="ModernDarkBackgroundColor">#0F172A</Color>
    <Color x:Key="ModernDarkSurfaceColor">#1E293B</Color>
    <Color x:Key="ModernDarkCardColor">#334155</Color>
    
    <!-- Text Colors -->
    <Color x:Key="ModernTextPrimaryColor">#1E293B</Color>
    <Color x:Key="ModernTextSecondaryColor">#64748B</Color>
    <Color x:Key="ModernTextTertiaryColor">#94A3B8</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="ModernPrimaryBrush" Color="{StaticResource ModernPrimaryColor}"/>
    <SolidColorBrush x:Key="ModernPrimaryLightBrush" Color="{StaticResource ModernPrimaryLightColor}"/>
    <SolidColorBrush x:Key="ModernPrimaryDarkBrush" Color="{StaticResource ModernPrimaryDarkColor}"/>
    <SolidColorBrush x:Key="ModernAccentBrush" Color="{StaticResource ModernAccentColor}"/>
    <SolidColorBrush x:Key="ModernAccentLightBrush" Color="{StaticResource ModernAccentLightColor}"/>
    <SolidColorBrush x:Key="ModernSuccessBrush" Color="{StaticResource ModernSuccessColor}"/>
    <SolidColorBrush x:Key="ModernWarningBrush" Color="{StaticResource ModernWarningColor}"/>
    <SolidColorBrush x:Key="ModernErrorBrush" Color="{StaticResource ModernErrorColor}"/>
    
    <SolidColorBrush x:Key="ModernBackgroundBrush" Color="{StaticResource ModernBackgroundColor}"/>
    <SolidColorBrush x:Key="ModernSurfaceBrush" Color="{StaticResource ModernSurfaceColor}"/>
    <SolidColorBrush x:Key="ModernCardBrush" Color="{StaticResource ModernCardColor}"/>
    <SolidColorBrush x:Key="ModernElevatedSurfaceBrush" Color="{StaticResource ModernElevatedSurfaceColor}"/>
    
    <SolidColorBrush x:Key="ModernTextPrimaryBrush" Color="{StaticResource ModernTextPrimaryColor}"/>
    <SolidColorBrush x:Key="ModernTextSecondaryBrush" Color="{StaticResource ModernTextSecondaryColor}"/>
    <SolidColorBrush x:Key="ModernTextTertiaryBrush" Color="{StaticResource ModernTextTertiaryColor}"/>

    <!-- Modern Gradient Brushes -->
    <LinearGradientBrush x:Key="ModernPrimaryGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource ModernPrimaryColor}" Offset="0"/>
        <GradientStop Color="{StaticResource ModernPrimaryLightColor}" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="ModernAccentGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource ModernAccentColor}" Offset="0"/>
        <GradientStop Color="{StaticResource ModernAccentLightColor}" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="ModernCardGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FFFFFF" Offset="0"/>
        <GradientStop Color="#F8FAFC" Offset="1"/>
    </LinearGradientBrush>

    <!-- Modern Button Styles -->
    <Style x:Key="ModernPrimaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource ModernPrimaryGradientBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="24,12"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    
    <Style x:Key="ModernSecondaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource ModernPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ModernPrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="1.5"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="24,12"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- Modern Card Style -->
    <Style x:Key="ModernCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource ModernCardBrush}"/>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="Padding" Value="24"/>
        <Setter Property="BorderBrush" Value="#E2E8F0"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
    
    <!-- Modern Elevated Card Style -->
    <Style x:Key="ModernElevatedCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource ModernElevatedSurfaceBrush}"/>
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="Padding" Value="32"/>
        <Setter Property="BorderBrush" Value="#E2E8F0"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- Modern Input Styles -->
    <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource ModernSurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource ModernTextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="#CBD5E1"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>
    
    <Style x:Key="ModernPasswordBoxStyle" TargetType="PasswordBox">
        <Setter Property="Background" Value="{StaticResource ModernSurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource ModernTextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="#CBD5E1"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- Modern Typography Styles -->
    <Style x:Key="ModernHeading1Style" TargetType="TextBlock">
        <Setter Property="FontSize" Value="36"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource ModernTextPrimaryBrush}"/>
    </Style>
    
    <Style x:Key="ModernHeading2Style" TargetType="TextBlock">
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource ModernTextPrimaryBrush}"/>
    </Style>
    
    <Style x:Key="ModernHeading3Style" TargetType="TextBlock">
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource ModernTextPrimaryBrush}"/>
    </Style>
    
    <Style x:Key="ModernBodyStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource ModernTextPrimaryBrush}"/>
    </Style>
    
    <Style x:Key="ModernCaptionStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource ModernTextSecondaryBrush}"/>
    </Style>

    <!-- Modern Navigation Styles -->
    <Style x:Key="ModernNavigationViewStyle" TargetType="NavigationView">
        <Setter Property="Background" Value="{StaticResource ModernSurfaceBrush}"/>
        <Setter Property="PaneBackground" Value="{StaticResource ModernBackgroundBrush}"/>
        <Setter Property="IsPaneToggleButtonVisible" Value="True"/>
        <Setter Property="IsBackButtonVisible" Value="Collapsed"/>
        <Setter Property="OpenPaneLength" Value="280"/>
        <Setter Property="CompactModeThresholdWidth" Value="640"/>
        <Setter Property="ExpandedModeThresholdWidth" Value="1028"/>
    </Style>

</ResourceDictionary>