<Page x:Class="PasswordManager.WinUi.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource ModernBackgroundBrush}">

    <ScrollViewer>
        <StackPanel Spacing="32" Margin="0,0,0,32">
            <!-- Welcome Header -->
            <Border Style="{StaticResource ModernElevatedCardStyle}" Margin="0,16,0,0">
                <StackPanel Spacing="16">
                    <!-- Hero Section -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,0,0,12">
                                <Border Background="{StaticResource ModernPrimaryGradientBrush}"
                                       CornerRadius="16"
                                       Width="48"
                                       Height="48">
                                    <FontIcon Glyph="&#xE1A3;" 
                                             FontSize="24"
                                             Foreground="White"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Welcome back!" 
                                              Style="{StaticResource ModernHeading2Style}"/>
                                    <TextBlock Text="Your digital vault is secure and ready"
                                              Style="{StaticResource ModernCaptionStyle}"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <TextBlock Text="{Binding WelcomeText}" 
                                      Style="{StaticResource ModernBodyStyle}"
                                      TextWrapping="Wrap"
                                      Margin="0,8,0,0"/>
                        </StackPanel>
                        
                        <!-- Quick Stats -->
                        <StackPanel Grid.Column="1" Spacing="8" VerticalAlignment="Center">
                            <Border Background="{StaticResource ModernSuccessBrush}"
                                   CornerRadius="12"
                                   Padding="12,6">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE1A3;" FontSize="14" Foreground="White"/>
                                    <TextBlock Text="Secured" Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Quick Actions Section -->
            <StackPanel Spacing="24">
                <TextBlock Text="Quick Actions" 
                          Style="{StaticResource ModernHeading3Style}"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Add Password Card -->
                    <Border Grid.Column="0" Grid.Row="0" 
                           Style="{StaticResource ModernCardStyle}"
                           Margin="0,0,12,12">
                        <StackPanel Spacing="16">
                            <Border Background="{StaticResource ModernPrimaryGradientBrush}"
                                   CornerRadius="12"
                                   Width="40"
                                   Height="40"
                                   HorizontalAlignment="Left">
                                <FontIcon Glyph="&#xE109;" 
                                         FontSize="20" 
                                         Foreground="White"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
                            </Border>
                            
                            <StackPanel Spacing="8">
                                <TextBlock Text="Add Password" 
                                          FontWeight="SemiBold" 
                                          FontSize="16"
                                          Foreground="{StaticResource ModernTextPrimaryBrush}"/>
                                <TextBlock Text="Store a new password securely with advanced encryption" 
                                          Style="{StaticResource ModernCaptionStyle}"
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                            
                            <Button Content="Add New" 
                                   Style="{StaticResource ModernPrimaryButtonStyle}"
                                   HorizontalAlignment="Stretch"
                                   Click="AddPasswordButton_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- View Passwords Card -->
                    <Border Grid.Column="1" Grid.Row="0" 
                           Style="{StaticResource ModernCardStyle}"
                           Margin="6,0,6,12">
                        <StackPanel Spacing="16">
                            <Border Background="{StaticResource ModernAccentGradientBrush}"
                                   CornerRadius="12"
                                   Width="40"
                                   Height="40"
                                   HorizontalAlignment="Left">
                                <FontIcon Glyph="&#xE8F1;" 
                                         FontSize="20" 
                                         Foreground="White"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
                            </Border>
                            
                            <StackPanel Spacing="8">
                                <TextBlock Text="View Passwords" 
                                          FontWeight="SemiBold" 
                                          FontSize="16"
                                          Foreground="{StaticResource ModernTextPrimaryBrush}"/>
                                <TextBlock Text="Browse and manage your stored passwords with ease" 
                                          Style="{StaticResource ModernCaptionStyle}"
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                            
                            <Button Content="View All" 
                                   Style="{StaticResource ModernSecondaryButtonStyle}"
                                   HorizontalAlignment="Stretch"
                                   Click="ViewPasswordsButton_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Import Data Card -->
                    <Border Grid.Column="2" Grid.Row="0" 
                           Style="{StaticResource ModernCardStyle}"
                           Margin="12,0,0,12">
                        <StackPanel Spacing="16">
                            <Border Background="{StaticResource ModernWarningBrush}"
                                   CornerRadius="12"
                                   Width="40"
                                   Height="40"
                                   HorizontalAlignment="Left">
                                <FontIcon Glyph="&#xE8B5;" 
                                         FontSize="20" 
                                         Foreground="White"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
                            </Border>
                            
                            <StackPanel Spacing="8">
                                <TextBlock Text="Import Data" 
                                          FontWeight="SemiBold" 
                                          FontSize="16"
                                          Foreground="{StaticResource ModernTextPrimaryBrush}"/>
                                <TextBlock Text="Import passwords from other password managers" 
                                          Style="{StaticResource ModernCaptionStyle}"
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                            
                            <Button Content="Import" 
                                   Style="{StaticResource ModernSecondaryButtonStyle}"
                                   HorizontalAlignment="Stretch"
                                   Click="ImportButton_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Categories Card -->
                    <Border Grid.Column="0" Grid.Row="1" 
                           Style="{StaticResource ModernCardStyle}"
                           Margin="0,0,12,0">
                        <StackPanel Spacing="16">
                            <Border Background="{StaticResource ModernSuccessBrush}"
                                   CornerRadius="12"
                                   Width="40"
                                   Height="40"
                                   HorizontalAlignment="Left">
                                <FontIcon Glyph="&#xE8FD;" 
                                         FontSize="20" 
                                         Foreground="White"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
                            </Border>
                            
                            <StackPanel Spacing="8">
                                <TextBlock Text="Categories" 
                                          FontWeight="SemiBold" 
                                          FontSize="16"
                                          Foreground="{StaticResource ModernTextPrimaryBrush}"/>
                                <TextBlock Text="Organize passwords by custom categories" 
                                          Style="{StaticResource ModernCaptionStyle}"
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                            
                            <Button Content="Organize" 
                                   Style="{StaticResource ModernSecondaryButtonStyle}"
                                   HorizontalAlignment="Stretch"
                                   Click="CategoriesButton_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Settings Card -->
                    <Border Grid.Column="1" Grid.Row="1" 
                           Style="{StaticResource ModernCardStyle}"
                           Margin="6,0,6,0">
                        <StackPanel Spacing="16">
                            <Border Background="{StaticResource ModernTextSecondaryBrush}"
                                   CornerRadius="12"
                                   Width="40"
                                   Height="40"
                                   HorizontalAlignment="Left">
                                <FontIcon Glyph="&#xE713;" 
                                         FontSize="20" 
                                         Foreground="White"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
                            </Border>
                            
                            <StackPanel Spacing="8">
                                <TextBlock Text="Settings" 
                                          FontWeight="SemiBold" 
                                          FontSize="16"
                                          Foreground="{StaticResource ModernTextPrimaryBrush}"/>
                                <TextBlock Text="Configure app preferences and security settings" 
                                          Style="{StaticResource ModernCaptionStyle}"
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                            
                            <Button Content="Configure" 
                                   Style="{StaticResource ModernSecondaryButtonStyle}"
                                   HorizontalAlignment="Stretch"
                                   Click="SettingsButton_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Security Card -->
                    <Border Grid.Column="2" Grid.Row="1" 
                           Style="{StaticResource ModernCardStyle}"
                           Margin="12,0,0,0">
                        <StackPanel Spacing="16">
                            <Border Background="{StaticResource ModernErrorBrush}"
                                   CornerRadius="12"
                                   Width="40"
                                   Height="40"
                                   HorizontalAlignment="Left">
                                <FontIcon Glyph="&#xE1A3;" 
                                         FontSize="20" 
                                         Foreground="White"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
                            </Border>
                            
                            <StackPanel Spacing="8">
                                <TextBlock Text="Security" 
                                          FontWeight="SemiBold" 
                                          FontSize="16"
                                          Foreground="{StaticResource ModernTextPrimaryBrush}"/>
                                <TextBlock Text="Logout and secure your sensitive data" 
                                          Style="{StaticResource ModernCaptionStyle}"
                                          TextWrapping="Wrap"/>
                            </StackPanel>

                            <Button Content="Secure &amp; Logout" 
                                   Style="{StaticResource ModernSecondaryButtonStyle}"
                                   HorizontalAlignment="Stretch"
                                   Click="LogoutButton_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>

            <!-- Status and Info -->
            <Border Style="{StaticResource ModernCardStyle}">
                <StackPanel Spacing="12">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE946;" 
                                 FontSize="20" 
                                 Foreground="{StaticResource ModernPrimaryBrush}"/>
                        <TextBlock Text="System Status" 
                                  Style="{StaticResource ModernHeading3Style}"/>
                    </StackPanel>
                    
                    <TextBlock Text="{Binding StatusText}" 
                              Style="{StaticResource ModernBodyStyle}"
                              TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>