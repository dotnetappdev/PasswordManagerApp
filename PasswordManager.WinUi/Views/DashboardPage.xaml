<Page x:Class="PasswordManager.WinUi.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:converters="using:PasswordManager.WinUi.Converters"
    xmlns:models="using:PasswordManager.Models"
      Background="{StaticResource ModernBackgroundBrush}">

    <Page.Resources>
        <converters:WebsiteToColorConverter x:Key="WebsiteToColorConverter"/>
        <converters:WebsiteToLetterConverter x:Key="WebsiteToLetterConverter"/>
    </Page.Resources>

    <!-- Top Toolbar -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar Row -->
    <Border Grid.Row="0" 
        Background="{StaticResource ModernCardBrush}" 
                BorderThickness="0,0,0,1" 
                BorderBrush="{StaticResource ModernBorderBrush}">
            <Grid Margin="16,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Search Box -->
                <AutoSuggestBox Grid.Column="0"
                               x:Name="SearchBox"
                               QueryIcon="Find"
                               PlaceholderText="Search passwords..."
                               MinWidth="300"
                               MaxWidth="400"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Style="{StaticResource ModernAutoSuggestBoxStyle}"
                               TextChanged="SearchBox_TextChanged"
                               QuerySubmitted="SearchBox_QuerySubmitted"
                               CornerRadius="20"/>
                
                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal" 
                           Spacing="12"
                           VerticalAlignment="Center"
                           Margin="16,0">
                    
              <Button x:Name="NewItemButton"
                           Content="New Item"
                           Style="{StaticResource ModernPrimaryButtonStyle}"
                  Click="AddPasswordButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="Border"
                                       Background="{StaticResource ModernPrimaryBrush}"
                                       CornerRadius="6"
                                       Padding="16,8">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE109;" FontSize="14" Foreground="White"/>
                                        <TextBlock Text="{TemplateBinding Content}" 
                                                  FontWeight="SemiBold" 
                                                  FontSize="14"
                                                  Foreground="White"/>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    
              <Button x:Name="EditButton"
                  Style="{StaticResource ModernSecondaryButtonStyle}"
                  Click="EditButton_Click"
                  IsEnabled="{Binding SelectedPasswordItem, Converter={StaticResource NotNullToBoolConverter}}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="Border"
                        Background="Transparent"
                                       CornerRadius="6"
                                       Padding="16,8">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE70F;" FontSize="14" Foreground="{StaticResource ModernTextPrimaryBrush}"/>
                                        <TextBlock Text="Edit" 
                                                  FontWeight="SemiBold" 
                                                  FontSize="14"
                                                  Foreground="{StaticResource ModernTextPrimaryBrush}"/>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main 3-Column Layout: Sidebar | Items List | Detail Panel -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280" MinWidth="260"/>
                <ColumnDefinition Width="360" MinWidth="320"/>
                <ColumnDefinition Width="*" MinWidth="400"/>
            </Grid.ColumnDefinitions>

            <!-- Column 1: Sidebar with Collections and Filters -->
            <Border Grid.Column="0" 
                    Background="{StaticResource ModernSurfaceBrush}"
                    BorderThickness="0,0,1,0"
                    BorderBrush="#E2E8F0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="20" Margin="20">
                        <!-- Header -->
                        <StackPanel Spacing="8" Margin="0,8,0,0">
                            <TextBlock Text="All Accounts" 
                                      Style="{StaticResource ModernHeading3Style}"
                                      FontWeight="Bold"/>
                            <ComboBox PlaceholderText="All Accounts"
                                     HorizontalAlignment="Stretch"
                                     Style="{StaticResource ModernComboBoxStyle}">
                                <ComboBoxItem Content="Personal"/>
                                <ComboBoxItem Content="Work"/>
                                <ComboBoxItem Content="Family"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Collections -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="COLLECTIONS" 
                                      Style="{StaticResource ModernCaptionStyle}"
                                      FontWeight="Bold"
                                      Foreground="{StaticResource ModernTextSecondaryBrush}"/>
                            <StackPanel>
                                <Button Background="Transparent"
                                       BorderThickness="0"
                                       HorizontalAlignment="Stretch"
                                       HorizontalContentAlignment="Left"
                                       Padding="12,10"
                                       CornerRadius="8"
                                       Tag="All">
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <FontIcon Glyph="&#xE8FD;" FontSize="16" Foreground="{StaticResource ModernPrimaryBrush}"/>
                                        <TextBlock Text="All Items" FontSize="14" FontWeight="Medium"/>
                                    </StackPanel>
                                </Button>
                                <Button Background="Transparent"
                                       BorderThickness="0"
                                       HorizontalAlignment="Stretch"
                                       HorizontalContentAlignment="Left"
                                       Padding="12,10"
                                       CornerRadius="8"
                                       Tag="Favorites">
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <FontIcon Glyph="&#xE1CE;" FontSize="16" Foreground="{StaticResource ModernWarningBrush}"/>
                                        <TextBlock Text="Favorites" FontSize="14" FontWeight="Medium"/>
                                    </StackPanel>
                                </Button>
                                <Button Background="Transparent"
                                       BorderThickness="0"
                                       HorizontalAlignment="Stretch"
                                       HorizontalContentAlignment="Left"
                                       Padding="12,10"
                                       CornerRadius="8"
                                       Tag="Watchtower">
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <FontIcon Glyph="&#xE7BA;" FontSize="16" Foreground="{StaticResource ModernAccentBrush}"/>
                                        <TextBlock Text="Watchtower" FontSize="14" FontWeight="Medium"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </StackPanel>

                        <!-- Categories -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="CATEGORIES" 
                                      Style="{StaticResource ModernCaptionStyle}"
                                      FontWeight="Bold"
                                      Foreground="{StaticResource ModernTextSecondaryBrush}"/>
                            <StackPanel>
                                <Button Background="Transparent"
                                       BorderThickness="0"
                                       HorizontalAlignment="Stretch"
                                       HorizontalContentAlignment="Left"
                                       Padding="12,10"
                                       CornerRadius="8"
                                       Tag="All Categories">
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <FontIcon Glyph="&#xE8FD;" FontSize="16" Foreground="{StaticResource ModernPrimaryBrush}"/>
                                        <TextBlock Text="All Categories" FontSize="14" FontWeight="Medium"/>
                                    </StackPanel>
                                </Button>
                                <Button Background="Transparent"
                                       BorderThickness="0"
                                       HorizontalAlignment="Stretch"
                                       HorizontalContentAlignment="Left"
                                       Padding="12,10"
                                       CornerRadius="8"
                                       Tag="Logins">
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <FontIcon Glyph="&#xE192;" FontSize="16" Foreground="{StaticResource ModernSuccessBrush}"/>
                                        <TextBlock Text="Logins" FontSize="14" FontWeight="Medium"/>
                                    </StackPanel>
                                </Button>
                                <Button Background="Transparent"
                                       BorderThickness="0"
                                       HorizontalAlignment="Stretch"
                                       HorizontalContentAlignment="Left"
                                       Padding="12,10"
                                       CornerRadius="8"
                                       Tag="Credit Cards">
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <FontIcon Glyph="&#xE8C7;" FontSize="16" Foreground="{StaticResource ModernErrorBrush}"/>
                                        <TextBlock Text="Credit Cards" FontSize="14" FontWeight="Medium"/>
                                    </StackPanel>
                                </Button>
                                <Button Background="Transparent"
                                       BorderThickness="0"
                                       HorizontalAlignment="Stretch"
                                       HorizontalContentAlignment="Left"
                                       Padding="12,10"
                                       CornerRadius="8"
                                       Tag="Identities">
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <FontIcon Glyph="&#xE77B;" FontSize="16" Foreground="{StaticResource ModernAccentBrush}"/>
                                        <TextBlock Text="Identities" FontSize="14" FontWeight="Medium"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </StackPanel>

                        <!-- Tags -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="TAGS" 
                                      Style="{StaticResource ModernCaptionStyle}"
                                      FontWeight="Bold"
                                      Foreground="{StaticResource ModernTextSecondaryBrush}"/>
                            <StackPanel>
                                <!-- Tag items would be dynamically populated -->
                                <TextBlock Text="No tags yet" 
                                          FontSize="13"
                                          Foreground="{StaticResource ModernTextTertiaryBrush}"
                                          Margin="12,8"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Column 2: Password Items List -->
            <Border Grid.Column="1" 
                    Background="{StaticResource ModernSurfaceBrush}"
                    BorderThickness="0,0,1,0"
                    BorderBrush="#E2E8F0">
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- List Header with Filter -->
                    <Border Grid.Row="0" 
                           Padding="16,12" 
                           Background="{StaticResource ModernCardBrush}"
                           BorderThickness="0,0,0,1"
                           BorderBrush="#E2E8F0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <ComboBox x:Name="CategoryFilterDropdown"
                                     Grid.Column="0"
                                     PlaceholderText="All Categories"
                                     Style="{StaticResource ModernComboBoxStyle}"
                                     FontWeight="SemiBold"
                                     FontSize="15">
                                <ComboBoxItem>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE8FD;" FontSize="14" Foreground="{StaticResource ModernPrimaryBrush}"/>
                                        <TextBlock Text="All Categories"/>
                                    </StackPanel>
                                </ComboBoxItem>
                                <ComboBoxItem>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE192;" FontSize="14" Foreground="{StaticResource ModernSuccessBrush}"/>
                                        <TextBlock Text="Logins"/>
                                    </StackPanel>
                                </ComboBoxItem>
                                <ComboBoxItem>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE8C7;" FontSize="14" Foreground="{StaticResource ModernErrorBrush}"/>
                                        <TextBlock Text="Credit Cards"/>
                                    </StackPanel>
                                </ComboBoxItem>
                                <ComboBoxItem>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE77B;" FontSize="14" Foreground="{StaticResource ModernAccentBrush}"/>
                                        <TextBlock Text="Identities"/>
                                    </StackPanel>
                                </ComboBoxItem>
                            </ComboBox>
                            
                            <Button Grid.Column="1"
                                   Background="Transparent"
                                   BorderThickness="0"
                                   Width="32"
                                   Height="32"
                                   CornerRadius="6"
                                   Margin="8,0"
                                   ToolTipService.ToolTip="Search">
                                <FontIcon Glyph="&#xE721;" FontSize="14" Foreground="{StaticResource ModernTextSecondaryBrush}"/>
                            </Button>
                            
                            <Button Grid.Column="2"
                                   Background="Transparent"
                                   BorderThickness="0"
                                   Width="32"
                                   Height="32"
                                   CornerRadius="6"
                                   ToolTipService.ToolTip="Sort">
                                <FontIcon Glyph="&#xE8CB;" FontSize="14" Foreground="{StaticResource ModernTextSecondaryBrush}"/>
                            </Button>
                        </Grid>
                    </Border>
                    
                    <!-- Search Box (Initially Collapsed) -->
                    <Border Grid.Row="1" 
                           Padding="16,8" 
                           BorderThickness="0,0,0,1"
                           BorderBrush="#E2E8F0"
                           Visibility="Collapsed">
                        <TextBox PlaceholderText="Search in All Accounts"
                                Style="{StaticResource ModernTextBoxStyle}"
                                CornerRadius="8"/>
                    </Border>
                    
                    <!-- Items List -->
                    <ListView Grid.Row="2" 
                             x:Name="PasswordItemsList"
                             ItemsSource="{Binding AllPasswordItems}"
                             SelectedItem="{Binding SelectedPasswordItem, Mode=TwoWay}"
                             SelectionMode="Single"
                             SelectionChanged="PasswordItemsList_SelectionChanged"
                             Background="Transparent"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                        
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="16,12" 
                                       Background="Transparent">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="48"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Website Favicon/Icon -->
                                        <Border Grid.Column="0" 
                                               Width="40" 
                                               Height="40"
                                               CornerRadius="8"
                                               Background="{Binding Website, Converter={StaticResource WebsiteToColorConverter}}"
                                               VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Website, Converter={StaticResource WebsiteToLetterConverter}}" 
                                                      FontWeight="Bold" 
                                                      FontSize="16"
                                                      Foreground="White"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </Border>
                                        
                                        <!-- Title and Username -->
                                        <StackPanel Grid.Column="1" 
                                                   Margin="12,0,8,0" 
                                                   VerticalAlignment="Center"
                                                   Spacing="2">
                                            <TextBlock Text="{Binding Title}" 
                                                      FontWeight="SemiBold" 
                                                      FontSize="15"
                                                      Foreground="{StaticResource ModernTextPrimaryBrush}"
                                                      TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding Username, FallbackValue='No username'}" 
                                                      FontSize="13"
                                                      Foreground="{StaticResource ModernTextSecondaryBrush}"
                                                      TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                        
                                        <!-- Favorite Icon -->
                                        <FontIcon Grid.Column="2" 
                                                 Glyph="&#xE1CE;" 
                                                 FontSize="16"
                                                 Foreground="{StaticResource ModernWarningBrush}"
                                                 VerticalAlignment="Center"
                                                 Visibility="{Binding IsFavorite, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Grid>
            </Border>

            <!-- Column 3: Detail Panel -->
            <Border Grid.Column="2" 
                    Background="{StaticResource ModernBackgroundBrush}">
                
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                             HorizontalScrollBarVisibility="Disabled"
                             Padding="32,24">
                    <Grid>
                        <!-- Modern Detail Panel with Inline Editing -->
                        <StackPanel x:Name="DetailPanel" Spacing="32" Visibility="{Binding SelectedPasswordItem, Converter={StaticResource NotNullToVisibilityConverter}}">
                            
                            <!-- Header Section -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Large App Icon -->
                                <Border Grid.Column="0" 
                                       Width="72" 
                                       Height="72"
                                       CornerRadius="16"
                                       Background="{StaticResource ModernPrimaryGradientBrush}"
                                       Margin="0,0,20,0">
                                    <TextBlock Text="{Binding SelectedPasswordItem.Title, FallbackValue='A'}" 
                                              FontWeight="Bold" 
                                              FontSize="28"
                                              Foreground="White"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>
                                
                                <!-- Title and Subtitle -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                                    <TextBlock Text="{Binding SelectedPasswordItem.Title, FallbackValue='Select an item'}" 
                                              FontWeight="Bold" 
                                              FontSize="24"
                                              Foreground="{StaticResource ModernTextPrimaryBrush}"/>
                                    <TextBlock Text="{Binding SelectedPasswordItem.Username, FallbackValue='No username'}" 
                                              FontSize="16"
                                              Foreground="{StaticResource ModernTextSecondaryBrush}"/>
                                </StackPanel>
                                
                                <!-- Action Menu -->
                                <Button Grid.Column="2" 
                                       Background="Transparent"
                                       BorderThickness="0"
                                       Width="40"
                                       Height="40"
                                       CornerRadius="8"
                                       VerticalAlignment="Top">
                                    <FontIcon Glyph="&#xE712;" FontSize="16" Foreground="{StaticResource ModernTextSecondaryBrush}"/>
                                </Button>
                            </Grid>
                            
                            <!-- Edit Mode Toggle -->
                            <Grid Visibility="{Binding IsInEditMode, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                <Button x:Name="EditModeButton"
                                       Style="{StaticResource ModernPrimaryButtonStyle}"
                                       HorizontalAlignment="Left"
                                       Click="EditButton_Click">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE70F;" FontSize="16"/>
                                        <TextBlock Text="Edit"/>
                                    </StackPanel>
                                </Button>
                            </Grid>

                            <!-- Inline Edit Form -->
                            <StackPanel x:Name="InlineEditPanel" Spacing="24" Visibility="{Binding IsInEditMode, Converter={StaticResource BoolToVisibilityConverter}}">
                                
                                <!-- Title Field -->
                                <StackPanel Spacing="8">
                                    <TextBlock Text="username" 
                                              FontWeight="SemiBold"
                                              FontSize="14"
                                              Foreground="{StaticResource ModernTextSecondaryBrush}"/>
                                    <TextBox Text="{Binding EditItem.Title, Mode=TwoWay}" 
                                            Style="{StaticResource ModernTextBoxStyle}"
                                            FontSize="16"
                                            MinHeight="48"/>
                                </StackPanel>

                                <!-- Username Field -->
                                <StackPanel Spacing="8">
                                    <TextBlock Text="username" 
                                              FontWeight="SemiBold"
                                              FontSize="14"
                                              Foreground="{StaticResource ModernTextSecondaryBrush}"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0"
                                                Text="{Binding EditItem.Username, Mode=TwoWay}" 
                                                Style="{StaticResource ModernTextBoxStyle}"
                                                FontSize="16"
                                                MinHeight="48"/>
                                        <Button Grid.Column="1"
                                               Background="Transparent"
                                               BorderThickness="0"
                                               Width="48"
                                               Height="48"
                                               Margin="8,0,0,0"
                                               CornerRadius="8"
                                               ToolTipService.ToolTip="Generate username">
                                            <FontIcon Glyph="&#xE777;" FontSize="16" Foreground="{StaticResource ModernTextSecondaryBrush}"/>
                                        </Button>
                                    </Grid>
                                </StackPanel>

                                <!-- Password Field -->
                                <StackPanel Spacing="8">
                                    <TextBlock Text="password" 
                                              FontWeight="SemiBold"
                                              FontSize="14"
                                              Foreground="{StaticResource ModernTextSecondaryBrush}"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <PasswordBox Grid.Column="0"
                                                    x:Name="InlinePasswordBox" 
                                                    PasswordChanged="InlinePasswordBox_PasswordChanged"
                                                    Style="{StaticResource ModernPasswordBoxStyle}"
                                                    FontSize="16"
                                                    MinHeight="48"/>
                                        <Button Grid.Column="1"
                                               Background="Transparent"
                                               BorderThickness="0"
                                               Width="48"
                                               Height="48"
                                               Margin="8,0,0,0"
                                               CornerRadius="8"
                                               ToolTipService.ToolTip="Generate password">
                                            <FontIcon Glyph="&#xE777;" FontSize="16" Foreground="{StaticResource ModernTextSecondaryBrush}"/>
                                        </Button>
                                        <Button Grid.Column="2"
                                               Background="Transparent"
                                               BorderThickness="0"
                                               Width="48"
                                               Height="48"
                                               Margin="4,0,0,0"
                                               CornerRadius="8"
                                               ToolTipService.ToolTip="Show/hide password">
                                            <FontIcon Glyph="&#xE7B3;" FontSize="16" Foreground="{StaticResource ModernTextSecondaryBrush}"/>
                                        </Button>
                                    </Grid>
                                </StackPanel>

                                <!-- Website Field -->
                                <StackPanel Spacing="8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                  Text="website" 
                                                  FontWeight="SemiBold"
                                                  FontSize="14"
                                                  Foreground="{StaticResource ModernTextSecondaryBrush}"/>
                                        <Button Grid.Column="1"
                                               Content="+ add another website"
                                               Background="Transparent"
                                               BorderThickness="0"
                                               Foreground="{StaticResource ModernPrimaryBrush}"
                                               FontSize="14"
                                               HorizontalAlignment="Right"/>
                                    </Grid>
                                    <TextBox Text="{Binding EditItem.Website, Mode=TwoWay}" 
                                            Style="{StaticResource ModernTextBoxStyle}"
                                            PlaceholderText="https://example.com"
                                            FontSize="16"
                                            MinHeight="48"/>
                                </StackPanel>

                                <!-- Additional Options -->
                                <StackPanel Spacing="16">
                                    <Button HorizontalAlignment="Left"
                                           Background="Transparent"
                                           BorderThickness="0"
                                           Foreground="{StaticResource ModernPrimaryBrush}"
                                           FontSize="14">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon Glyph="&#xE109;" FontSize="14"/>
                                            <TextBlock Text="add more"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>

                                <!-- Notes Section -->
                                <StackPanel Spacing="8">
                                    <TextBlock Text="notes" 
                                              FontWeight="SemiBold"
                                              FontSize="14"
                                              Foreground="{StaticResource ModernTextSecondaryBrush}"/>
                                    <TextBox Text="{Binding EditItem.Description, Mode=TwoWay}" 
                                            Style="{StaticResource ModernTextBoxStyle}"
                                            PlaceholderText="Add any notes about this item here."
                                            AcceptsReturn="True"
                                            TextWrapping="Wrap"
                                            MinHeight="80"
                                            MaxHeight="120"/>
                                </StackPanel>

                                <!-- Location and Tags -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Spacing="8" Margin="0,0,8,0">
                                        <Button HorizontalAlignment="Left"
                                               Background="Transparent"
                                               BorderThickness="0"
                                               Foreground="{StaticResource ModernPrimaryBrush}"
                                               FontSize="14">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon Glyph="&#xE109;" FontSize="14"/>
                                                <TextBlock Text="add a location"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Spacing="8" Margin="8,0,0,0">
                                        <TextBlock Text="tags" 
                                                  FontWeight="SemiBold"
                                                  FontSize="14"
                                                  Foreground="{StaticResource ModernTextSecondaryBrush}"/>
                                        <Button HorizontalAlignment="Left"
                                               Background="Transparent"
                                               BorderThickness="0"
                                               Foreground="{StaticResource ModernPrimaryBrush}"
                                               FontSize="14">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon Glyph="&#xE109;" FontSize="14"/>
                                                <TextBlock Text="Add tag"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Grid>

                                <!-- Action Buttons -->
                                <Grid Margin="0,16,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Save Button -->
                                    <Button Grid.Column="2"
                                           x:Name="SaveInlineButton" 
                                           Content="Save"
                                           Style="{StaticResource ModernPrimaryButtonStyle}"
                                           MinWidth="100"
                                           Click="SaveInlineButton_Click"/>
                                    
                                    <!-- Cancel Button -->
                                    <Button Grid.Column="0"
                                           x:Name="CancelInlineButton" 
                                           Content="Cancel"
                                           Style="{StaticResource ModernSecondaryButtonStyle}"
                                           MinWidth="80"
                                           Click="CancelInlineButton_Click"/>
                                </Grid>
                            </StackPanel>

                            <!-- Read-Only Display Mode -->
                            <StackPanel Spacing="24" Visibility="{Binding IsInEditMode, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                
                                <!-- Username Display -->
                                <StackPanel Spacing="8">
                                    <TextBlock Text="username" 
                                              FontWeight="SemiBold"
                                              FontSize="14"
                                              Foreground="{StaticResource ModernTextSecondaryBrush}"/>
                                    <Border Background="{StaticResource ModernSurfaceBrush}"
                                           BorderBrush="#E2E8F0"
                                           BorderThickness="1"
                                           CornerRadius="8"
                                           Padding="16,12"
                                           MinHeight="48">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0"
                                                      Text="{Binding SelectedPasswordItem.Username, FallbackValue='No username'}"
                                                      FontSize="16"
                                                      VerticalAlignment="Center"
                                                      TextTrimming="CharacterEllipsis"/>
                                            <Button Grid.Column="1"
                                                   Background="Transparent"
                                                   BorderThickness="0"
                                                   Padding="8"
                                                   Click="CopyUsernameButton_Click"
                                                   ToolTipService.ToolTip="Copy username">
                                                <FontIcon Glyph="&#xE8C8;" FontSize="16" Foreground="{StaticResource ModernPrimaryBrush}"/>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                                
                                <!-- Password Display -->
                                <StackPanel Spacing="8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                  Text="password" 
                                                  FontWeight="SemiBold"
                                                  FontSize="14"
                                                  Foreground="{StaticResource ModernTextSecondaryBrush}"/>
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="4">
                                            <Border Background="{StaticResource ModernSuccessBrush}"
                                                   CornerRadius="12"
                                                   Padding="8,4">
                                                <TextBlock Text="Fantastic" 
                                                          FontSize="12"
                                                          FontWeight="SemiBold"
                                                          Foreground="White"/>
                                            </Border>
                                            <FontIcon Glyph="&#xE10A;" FontSize="12" Foreground="{StaticResource ModernSuccessBrush}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                    <Border Background="{StaticResource ModernSurfaceBrush}"
                                           BorderBrush="#E2E8F0"
                                           BorderThickness="1"
                                           CornerRadius="8"
                                           Padding="16,12"
                                           MinHeight="48">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0"
                                                      x:Name="PasswordDisplayField"
                                                      Text="••••••••••••"
                                                      FontSize="16"
                                                      VerticalAlignment="Center"/>
                                            <Button Grid.Column="1"
                                                   Background="Transparent"
                                                   BorderThickness="0"
                                                   Padding="8"
                                                   Click="TogglePasswordVisibilityButton_Click"
                                                   ToolTipService.ToolTip="Show/hide password">
                                                <FontIcon Glyph="&#xE7B3;" FontSize="16" Foreground="{StaticResource ModernTextSecondaryBrush}"/>
                                            </Button>
                                            <Button Grid.Column="2"
                                                   Background="Transparent"
                                                   BorderThickness="0"
                                                   Padding="8"
                                                   Click="CopyPasswordButton_Click"
                                                   ToolTipService.ToolTip="Copy password">
                                                <FontIcon Glyph="&#xE8C8;" FontSize="16" Foreground="{StaticResource ModernPrimaryBrush}"/>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <!-- OTP Display (if available) -->
                                <StackPanel Spacing="8" Visibility="Collapsed">
                                    <TextBlock Text="one-time password" 
                                              FontWeight="SemiBold"
                                              FontSize="14"
                                              Foreground="{StaticResource ModernTextSecondaryBrush}"/>
                                    <Border Background="{StaticResource ModernSurfaceBrush}"
                                           BorderBrush="#E2E8F0"
                                           BorderThickness="1"
                                           CornerRadius="8"
                                           Padding="16,12"
                                           MinHeight="48">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0"
                                                      Text="719"
                                                      FontSize="20"
                                                      FontWeight="Bold"
                                                      VerticalAlignment="Center"
                                                      Margin="0,0,8,0"/>
                                            <TextBlock Grid.Column="1"
                                                      Text="• 737"
                                                      FontSize="20"
                                                      FontWeight="Bold"
                                                      VerticalAlignment="Center"/>
                                            <Border Grid.Column="2"
                                                   Background="{StaticResource ModernSuccessBrush}"
                                                   CornerRadius="12"
                                                   Padding="6,2"
                                                   Margin="8,0">
                                                <TextBlock Text="27" 
                                                          FontSize="12"
                                                          FontWeight="Bold"
                                                          Foreground="White"/>
                                            </Border>
                                            <Button Grid.Column="3"
                                                   Background="Transparent"
                                                   BorderThickness="0"
                                                   Padding="8"
                                                   ToolTipService.ToolTip="Copy OTP">
                                                <FontIcon Glyph="&#xE8C8;" FontSize="16" Foreground="{StaticResource ModernPrimaryBrush}"/>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                                
                                <!-- Website Display -->
                                <StackPanel Spacing="8">
                                    <TextBlock Text="website" 
                                              FontWeight="SemiBold"
                                              FontSize="14"
                                              Foreground="{StaticResource ModernTextSecondaryBrush}"/>
                                    <Border Background="{StaticResource ModernSurfaceBrush}"
                                           BorderBrush="#E2E8F0"
                                           BorderThickness="1"
                                           CornerRadius="8"
                                           Padding="16,12"
                                           MinHeight="48">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0"
                                                      Text="{Binding SelectedPasswordItem.Website, FallbackValue='No website'}"
                                                      FontSize="16"
                                                      VerticalAlignment="Center"
                                                      TextTrimming="CharacterEllipsis"/>
                                            <Button Grid.Column="1"
                                                   Background="Transparent"
                                                   BorderThickness="0"
                                                   Padding="8"
                                                   Click="OpenWebsiteButton_Click"
                                                   ToolTipService.ToolTip="Open website">
                                                <FontIcon Glyph="&#xE774;" FontSize="16" Foreground="{StaticResource ModernPrimaryBrush}"/>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <!-- Notes Display -->
                                <StackPanel Spacing="8" Visibility="{Binding SelectedPasswordItem.Description, Converter={StaticResource StringToVisibilityConverter}}">
                                    <TextBlock Text="notes" 
                                              FontWeight="SemiBold"
                                              FontSize="14"
                                              Foreground="{StaticResource ModernTextSecondaryBrush}"/>
                                    <Border Background="{StaticResource ModernSurfaceBrush}"
                                           BorderBrush="#E2E8F0"
                                           BorderThickness="1"
                                           CornerRadius="8"
                                           Padding="16,12">
                                        <TextBlock Text="{Binding SelectedPasswordItem.Description}"
                                                  FontSize="14"
                                                  TextWrapping="Wrap"
                                                  LineHeight="20"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Empty State -->
                        <StackPanel Spacing="24" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   Visibility="{Binding SelectedPasswordItem, Converter={StaticResource NotNullToInvertedVisibilityConverter}}">
                            <Border Background="{StaticResource ModernPrimaryGradientBrush}"
                                   CornerRadius="32"
                                   Width="96"
                                   Height="96"
                                   HorizontalAlignment="Center">
                                <FontIcon Glyph="&#xE192;" 
                                         FontSize="48" 
                                         Foreground="White"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Spacing="8" HorizontalAlignment="Center">
                                <TextBlock Text="Select an item to view details" 
                                          FontSize="18"
                                          FontWeight="SemiBold"
                                          Foreground="{StaticResource ModernTextPrimaryBrush}"
                                          HorizontalAlignment="Center"/>
                                <TextBlock Text="Choose a password from the list to see its details here" 
                                          FontSize="14"
                                          Foreground="{StaticResource ModernTextSecondaryBrush}"
                                          HorizontalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </Border>
            
        </Grid>
    </Grid>
</Page>