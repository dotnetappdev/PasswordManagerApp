<Page x:Class="PasswordManager.WinUi.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <!-- Navigation Pane -->
        <SplitView x:Name="MainSplitView" 
                   DisplayMode="Inline" 
                   IsPaneOpen="True" 
                   OpenPaneLength="250">
            
            <!-- Navigation Panel -->
            <SplitView.Pane>
                <Grid Background="{ThemeResource NavigationViewDefaultPaneBackground}">
                    <StackPanel Margin="16">
                        
                        <!-- User Info -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Password Manager" 
                                      FontSize="18" 
                                      FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding WelcomeText}" 
                                      FontSize="12" 
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        
                        <!-- Navigation Buttons -->
                        <StackPanel Spacing="8">
                            <Button x:Name="ViewPasswordsButton"
                                   Content="📋 Passwords"
                                   HorizontalAlignment="Stretch"
                                   HorizontalContentAlignment="Left"
                                   Click="ViewPasswordsButton_Click"/>
                            
                            <Button x:Name="CategoriesButton"
                                   Content="📁 Categories"
                                   HorizontalAlignment="Stretch"
                                   HorizontalContentAlignment="Left"
                                   Click="CategoriesButton_Click"/>
                            
                            <Button x:Name="ImportButton"
                                   Content="📥 Import"
                                   HorizontalAlignment="Stretch"
                                   HorizontalContentAlignment="Left"
                                   Click="ImportButton_Click"/>
                            
                            <Button x:Name="SettingsButton"
                                   Content="⚙️ Settings"
                                   HorizontalAlignment="Stretch"
                                   HorizontalContentAlignment="Left"
                                   Click="SettingsButton_Click"/>
                        </StackPanel>
                        
                        <!-- Bottom Actions -->
                        <StackPanel VerticalAlignment="Bottom" 
                                   Spacing="8" 
                                   Margin="0,20,0,0">
                            <Button x:Name="AddPasswordButton"
                                   Content="➕ Add Password"
                                   Style="{StaticResource AccentButtonStyle}"
                                   HorizontalAlignment="Stretch"
                                   Click="AddPasswordButton_Click"/>
                            
                            <Button x:Name="RefreshButton"
                                   Content="🔄 Refresh"
                                   HorizontalAlignment="Stretch"
                                   HorizontalContentAlignment="Left"
                                   Click="RefreshButton_Click"/>
                            
                            <Button x:Name="LogoutButton"
                                   Content="🚪 Logout"
                                   HorizontalAlignment="Stretch"
                                   HorizontalContentAlignment="Left"
                                   Click="LogoutButton_Click"/>
                        </StackPanel>
                        
                    </StackPanel>
                </Grid>
            </SplitView.Pane>
            
            <!-- Main Content Area -->
            <SplitView.Content>
                <Grid>
                    <!-- Content Frame -->
                    <Frame x:Name="ContentFrame">
                        <!-- Default Dashboard Content -->
                        <Grid Padding="40">
                            <StackPanel HorizontalAlignment="Center" 
                                       VerticalAlignment="Center" 
                                       Spacing="20">
                                
                                <TextBlock Text="🛡️" 
                                          FontSize="72" 
                                          HorizontalAlignment="Center"/>
                                
                                <TextBlock Text="Password Manager Dashboard" 
                                          FontSize="28" 
                                          FontWeight="Bold" 
                                          HorizontalAlignment="Center"/>
                                
                                <TextBlock Text="Select an option from the menu to get started" 
                                          FontSize="16" 
                                          HorizontalAlignment="Center" 
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                
                                <!-- Quick Actions -->
                                <StackPanel Orientation="Horizontal" 
                                           Spacing="16" 
                                           HorizontalAlignment="Center" 
                                           Margin="0,20,0,0">
                                    
                                    <Button Content="Add New Password" 
                                           Style="{StaticResource AccentButtonStyle}" 
                                           Click="AddPasswordButton_Click"/>
                                    
                                    <Button Content="View All Passwords" 
                                           Click="ViewPasswordsButton_Click"/>
                                    
                                </StackPanel>
                                
                            </StackPanel>
                        </Grid>
                    </Frame>
                    
                    <!-- Status Bar -->
                    <Border Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}" 
                           Height="24" 
                           VerticalAlignment="Bottom">
                        <TextBlock Text="{Binding StatusText}" 
                                  FontSize="12" 
                                  Margin="16,4" 
                                  VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </SplitView.Content>
            
        </SplitView>
    </Grid>
</Page>