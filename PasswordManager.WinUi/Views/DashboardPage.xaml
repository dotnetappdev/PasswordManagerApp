<Page x:Class="PasswordManager.WinUi.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer>
        <Grid Padding="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Welcome Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,32">
                <TextBlock Text="ðŸ›¡ï¸" 
                          FontSize="64" 
                          HorizontalAlignment="Left"
                          Margin="0,0,0,16"/>
                
                <TextBlock Text="Welcome to Password Manager" 
                          FontSize="32" 
                          FontWeight="Bold" 
                          Margin="0,0,0,8"/>
                
                <TextBlock Text="{Binding WelcomeText}" 
                          FontSize="16" 
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <!-- Quick Actions -->
            <StackPanel Grid.Row="1" Margin="0,0,0,32">
                <TextBlock Text="Quick Actions" 
                          FontSize="20" 
                          FontWeight="SemiBold" 
                          Margin="0,0,0,16"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Add Password Card -->
                    <Border Grid.Column="0" Grid.Row="0" 
                           Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                           CornerRadius="8" 
                           Padding="20" 
                           Margin="0,0,8,8">
                        <StackPanel>
                            <FontIcon Glyph="&#xE109;" FontSize="24" Margin="0,0,0,8"/>
                            <TextBlock Text="Add Password" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <TextBlock Text="Store a new password securely" 
                                      FontSize="12" 
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                                      TextWrapping="Wrap"/>
                            <Button Content="Add New" 
                                   Style="{StaticResource AccentButtonStyle}" 
                                   Margin="0,12,0,0"
                                   Click="AddPasswordButton_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- View Passwords Card -->
                    <Border Grid.Column="1" Grid.Row="0" 
                           Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                           CornerRadius="8" 
                           Padding="20" 
                           Margin="8,0,8,8">
                        <StackPanel>
                            <FontIcon Glyph="&#xE192;" FontSize="24" Margin="0,0,0,8"/>
                            <TextBlock Text="View Passwords" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <TextBlock Text="Browse and manage your stored passwords" 
                                      FontSize="12" 
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                                      TextWrapping="Wrap"/>
                            <Button Content="View All" 
                                   Margin="0,12,0,0"
                                   Click="ViewPasswordsButton_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Import Data Card -->
                    <Border Grid.Column="2" Grid.Row="0" 
                           Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                           CornerRadius="8" 
                           Padding="20" 
                           Margin="8,0,0,8">
                        <StackPanel>
                            <FontIcon Glyph="&#xE8B5;" FontSize="24" Margin="0,0,0,8"/>
                            <TextBlock Text="Import Data" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <TextBlock Text="Import passwords from other sources" 
                                      FontSize="12" 
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                                      TextWrapping="Wrap"/>
                            <Button Content="Import" 
                                   Margin="0,12,0,0"
                                   Click="ImportButton_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Categories Card -->
                    <Border Grid.Column="0" Grid.Row="1" 
                           Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                           CornerRadius="8" 
                           Padding="20" 
                           Margin="0,0,8,0">
                        <StackPanel>
                            <FontIcon Glyph="&#xE8FD;" FontSize="24" Margin="0,0,0,8"/>
                            <TextBlock Text="Categories" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <TextBlock Text="Organize passwords by categories" 
                                      FontSize="12" 
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                                      TextWrapping="Wrap"/>
                            <Button Content="Manage" 
                                   Margin="0,12,0,0"
                                   Click="CategoriesButton_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Settings Card -->
                    <Border Grid.Column="1" Grid.Row="1" 
                           Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                           CornerRadius="8" 
                           Padding="20" 
                           Margin="8,0,8,0">
                        <StackPanel>
                            <FontIcon Glyph="&#xE713;" FontSize="24" Margin="0,0,0,8"/>
                            <TextBlock Text="Settings" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <TextBlock Text="Configure app preferences and security" 
                                      FontSize="12" 
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                                      TextWrapping="Wrap"/>
                            <Button Content="Configure" 
                                   Margin="0,12,0,0"
                                   Click="SettingsButton_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Logout Card -->
                    <Border Grid.Column="2" Grid.Row="1" 
                           Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                           CornerRadius="8" 
                           Padding="20" 
                           Margin="8,0,0,0">
                        <StackPanel>
                            <FontIcon Glyph="&#xE7E8;" FontSize="24" Margin="0,0,0,8"/>
                            <TextBlock Text="Security" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <TextBlock Text="Logout and secure your data" 
                                      FontSize="12" 
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                                      TextWrapping="Wrap"/>
                            <Button Content="Logout" 
                                   Margin="0,12,0,0"
                                   Click="LogoutButton_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>

            <!-- Status and Info -->
            <StackPanel Grid.Row="2" VerticalAlignment="Bottom">
                <Border Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}" 
                       CornerRadius="4"
                       Padding="12,8">
                    <TextBlock Text="{Binding StatusText}" 
                              FontSize="12" 
                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>