<Page x:Class="PasswordManager.WinUi.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource ModernBackgroundBrush}">

    <!-- Top Toolbar -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar Row -->
        <Border Grid.Row="0" 
                Background="{StaticResource ModernCardBackgroundBrush}" 
                BorderThickness="0,0,0,1" 
                BorderBrush="{StaticResource ModernBorderBrush}">
            <Grid Margin="16,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Search Box -->
                <AutoSuggestBox Grid.Column="0"
                               x:Name="SearchBox"
                               QueryIcon="Find"
                               PlaceholderText="Search passwords..."
                               MinWidth="300"
                               MaxWidth="400"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Style="{StaticResource ModernAutoSuggestBoxStyle}"
                               TextChanged="SearchBox_TextChanged"
                               QuerySubmitted="SearchBox_QuerySubmitted"
                               CornerRadius="20"/>
                
                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal" 
                           Spacing="12"
                           VerticalAlignment="Center"
                           Margin="16,0">
                    
                    <Button x:Name="NewItemButton"
                           Content="New Item"
                           Style="{StaticResource ModernPrimaryButtonStyle}"
                           Click="AddPasswordButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="Border"
                                       Background="{StaticResource ModernPrimaryBrush}"
                                       CornerRadius="6"
                                       Padding="16,8">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE109;" FontSize="14" Foreground="White"/>
                                        <TextBlock Text="{TemplateBinding Content}" 
                                                  FontWeight="SemiBold" 
                                                  FontSize="14"
                                                  Foreground="White"/>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    
                    <Button x:Name="EditButton"
                           Content="Edit"
                           Style="{StaticResource ModernSecondaryButtonStyle}"
                           Click="EditButton_Click"
                           IsEnabled="{Binding SelectedPasswordItem, Converter={x:Null}}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="Border"
                                       Background="{StaticResource ModernSecondaryBrush}"
                                       CornerRadius="6"
                                       Padding="16,8">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE70F;" FontSize="14" Foreground="{StaticResource ModernTextPrimaryBrush}"/>
                                        <TextBlock Text="Edit" 
                                                  FontWeight="SemiBold" 
                                                  FontSize="14"
                                                  Foreground="{StaticResource ModernTextPrimaryBrush}"/>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main 3-Column Layout -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" MinWidth="200"/>
                <ColumnDefinition Width="340" MinWidth="280"/>
                <ColumnDefinition Width="*" MinWidth="400"/>
            </Grid.ColumnDefinitions>

            <!-- Column 1: Navigation Sidebar -->
            <Border Grid.Column="0" 
                    Background="{StaticResource ModernCardBackgroundBrush}"
                    BorderThickness="0,0,1,0"
                    BorderBrush="{StaticResource ModernBorderBrush}">
                
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                             HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="8" Spacing="4">
                        
                        <!-- All Items -->
                        <Button x:Name="AllItemsNavButton"
                               Content="All Items" 
                               Tag="AllItems"
                               Click="NavigationButton_Click"
                               Style="{StaticResource ModernNavigationButtonStyle}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="Border"
                                           Background="Transparent"
                                           CornerRadius="6"
                                           Padding="12,10">
                                        <StackPanel Orientation="Horizontal" Spacing="12">
                                            <FontIcon Glyph="&#xE8F1;" FontSize="16" x:Name="Icon"/>
                                            <TextBlock Text="{TemplateBinding Content}" FontSize="14" x:Name="Text"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="{StaticResource ModernHoverBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        
                        <!-- Favorites -->
                        <Button x:Name="FavoritesNavButton"
                               Content="Favorites"
                               Tag="Favorites"
                               Click="NavigationButton_Click"
                               Style="{StaticResource ModernNavigationButtonStyle}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="Border"
                                           Background="Transparent"
                                           CornerRadius="6"
                                           Padding="12,10">
                                        <StackPanel Orientation="Horizontal" Spacing="12">
                                            <FontIcon Glyph="&#xE734;" FontSize="16" x:Name="Icon"/>
                                            <TextBlock Text="{TemplateBinding Content}" FontSize="14" x:Name="Text"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="{StaticResource ModernHoverBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        
                        <!-- Categories -->
                        <Button x:Name="CategoriesNavButton"
                               Content="Categories"
                               Tag="Categories" 
                               Click="NavigationButton_Click"
                               Style="{StaticResource ModernNavigationButtonStyle}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="Border"
                                           Background="Transparent"
                                           CornerRadius="6"
                                           Padding="12,10">
                                        <StackPanel Orientation="Horizontal" Spacing="12">
                                            <FontIcon Glyph="&#xE8FD;" FontSize="16" x:Name="Icon"/>
                                            <TextBlock Text="{TemplateBinding Content}" FontSize="14" x:Name="Text"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="{StaticResource ModernHoverBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Separator -->
                        <Rectangle Height="1" 
                                  Fill="{StaticResource ModernBorderBrush}" 
                                  Margin="12,16"/>

                        <!-- Settings -->
                        <Button x:Name="SettingsNavButton"
                               Content="Settings"
                               Click="SettingsButton_Click"
                               Style="{StaticResource ModernNavigationButtonStyle}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="Border"
                                           Background="Transparent"
                                           CornerRadius="6"
                                           Padding="12,10">
                                        <StackPanel Orientation="Horizontal" Spacing="12">
                                            <FontIcon Glyph="&#xE713;" FontSize="16" x:Name="Icon"/>
                                            <TextBlock Text="{TemplateBinding Content}" FontSize="14" x:Name="Text"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="{StaticResource ModernHoverBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Import -->
                        <Button x:Name="ImportNavButton"
                               Content="Import Data"
                               Click="ImportButton_Click"
                               Style="{StaticResource ModernNavigationButtonStyle}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="Border"
                                           Background="Transparent"
                                           CornerRadius="6"
                                           Padding="12,10">
                                        <StackPanel Orientation="Horizontal" Spacing="12">
                                            <FontIcon Glyph="&#xE8B5;" FontSize="16" x:Name="Icon"/>
                                            <TextBlock Text="{TemplateBinding Content}" FontSize="14" x:Name="Text"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="{StaticResource ModernHoverBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Column 2: Password Items List -->
            <Border Grid.Column="1" 
                    Background="{StaticResource ModernCardBackgroundBrush}"
                    BorderThickness="0,0,1,0"
                    BorderBrush="{StaticResource ModernBorderBrush}">
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- List Header -->
                    <Border Grid.Row="0" 
                           Padding="16,12" 
                           BorderThickness="0,0,0,1"
                           BorderBrush="{StaticResource ModernBorderBrush}">
                        <TextBlock Text="All Items" 
                                  FontWeight="SemiBold" 
                                  FontSize="14"
                                  Foreground="{StaticResource ModernTextPrimaryBrush}"/>
                    </Border>
                    
                    <!-- Items List -->
                    <ListView Grid.Row="1" 
                             x:Name="PasswordItemsList"
                             ItemsSource="{Binding AllPasswordItems}"
                             SelectedItem="{Binding SelectedPasswordItem, Mode=TwoWay}"
                             SelectionMode="Single"
                             SelectionChanged="PasswordItemsList_SelectionChanged"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                        
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="16,12" 
                                       Background="Transparent"
                                       BorderThickness="0,0,0,1"
                                       BorderBrush="{StaticResource ModernBorderBrush}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Website Favicon/Icon -->
                                        <Border Grid.Column="0" 
                                               Width="32" 
                                               Height="32"
                                               CornerRadius="6"
                                               Background="{StaticResource ModernAccentBrush}"
                                               VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Title, FallbackValue='?'}" 
                                                      FontWeight="Bold" 
                                                      FontSize="12"
                                                      Foreground="White"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </Border>
                                        
                                        <!-- Title and Username -->
                                        <StackPanel Grid.Column="1" 
                                                   Margin="12,0,8,0" 
                                                   VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Title}" 
                                                      FontWeight="SemiBold" 
                                                      FontSize="14"
                                                      Foreground="{StaticResource ModernTextPrimaryBrush}"
                                                      TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding Username, FallbackValue='No username'}" 
                                                      FontSize="12"
                                                      Foreground="{StaticResource ModernTextSecondaryBrush}"
                                                      TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                        
                                        <!-- Favorite Icon -->
                                        <FontIcon Grid.Column="2" 
                                                 Glyph="&#xE734;" 
                                                 FontSize="14"
                                                 Foreground="{StaticResource ModernWarningBrush}"
                                                 Visibility="{Binding IsFavorite, Converter={StaticResource BoolToVisibilityConverter}}"
                                                 VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{StaticResource ModernSelectionBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource ModernHoverBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Grid>
            </Border>

            <!-- Column 3: Password Detail Form -->
            <Border Grid.Column="2" 
                    Background="{StaticResource ModernBackgroundBrush}">
                
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                             HorizontalScrollBarVisibility="Disabled"
                             Padding="24">
                    
                    <StackPanel Spacing="24">
                        
                        <!-- Header with Icon and Title -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Large Icon -->
                            <Border Grid.Column="0" 
                                   Width="64" 
                                   Height="64"
                                   CornerRadius="12"
                                   Background="{StaticResource ModernAccentBrush}"
                                   Margin="0,0,16,0">
                                <TextBlock Text="{Binding SelectedPasswordItem.Title, FallbackValue='?'}" 
                                          FontWeight="Bold" 
                                          FontSize="20"
                                          Foreground="White"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Border>
                            
                            <!-- Title and Description -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding SelectedPasswordItem.Title}" 
                                          FontWeight="Bold" 
                                          FontSize="18"
                                          Foreground="{StaticResource ModernTextPrimaryBrush}"/>
                                <TextBlock Text="{Binding SelectedPasswordItem.Website, FallbackValue='No website'}" 
                                          FontSize="14"
                                          Foreground="{StaticResource ModernTextSecondaryBrush}"/>
                            </StackPanel>
                            
                            <!-- Favorite Toggle -->
                            <CheckBox Grid.Column="2" 
                                     IsChecked="{Binding SelectedPasswordItem.IsFavorite, Mode=TwoWay}"
                                     Content="★"
                                     FontSize="20"
                                     VerticalAlignment="Center"/>
                        </Grid>
                        
                        <!-- Form Fields -->
                        <StackPanel Spacing="16">
                            
                            <!-- Username -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" 
                                          Text="username" 
                                          FontSize="12"
                                          Foreground="{StaticResource ModernTextSecondaryBrush}"
                                          VerticalAlignment="Center"/>
                                
                                <TextBox Grid.Column="1" 
                                        Text="{Binding SelectedPasswordItem.Username, Mode=TwoWay}"
                                        Style="{StaticResource ModernTextBoxStyle}"
                                        Margin="0,0,8,0"/>
                                
                                <Button Grid.Column="2" 
                                       Content="📋"
                                       Click="CopyUsernameButton_Click"
                                       ToolTip.Tip="Copy username"/>
                            </Grid>
                            
                            <!-- Password -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" 
                                          Text="password" 
                                          FontSize="12"
                                          Foreground="{StaticResource ModernTextSecondaryBrush}"
                                          VerticalAlignment="Center"/>
                                
                                <PasswordBox Grid.Column="1" 
                                            x:Name="PasswordField"
                                            Password="{Binding SelectedPasswordItem.Password, Mode=TwoWay}"
                                            Style="{StaticResource ModernPasswordBoxStyle}"
                                            Margin="0,0,8,0"/>
                                
                                <Button Grid.Column="2" 
                                       Content="👁"
                                       Click="TogglePasswordVisibilityButton_Click"
                                       ToolTip.Tip="Show/Hide password"
                                       Margin="0,0,4,0"/>
                                
                                <Button Grid.Column="3" 
                                       Content="📋"
                                       Click="CopyPasswordButton_Click"
                                       ToolTip.Tip="Copy password"/>
                            </Grid>
                            
                            <!-- Website -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" 
                                          Text="website" 
                                          FontSize="12"
                                          Foreground="{StaticResource ModernTextSecondaryBrush}"
                                          VerticalAlignment="Center"/>
                                
                                <TextBox Grid.Column="1" 
                                        Text="{Binding SelectedPasswordItem.Website, Mode=TwoWay}"
                                        Style="{StaticResource ModernTextBoxStyle}"
                                        Margin="0,0,8,0"/>
                                
                                <Button Grid.Column="2" 
                                       Content="🌐"
                                       Click="OpenWebsiteButton_Click"
                                       ToolTip.Tip="Open website"/>
                            </Grid>
                            
                        </StackPanel>
                        
                        <!-- Metadata -->
                        <StackPanel Spacing="8">
                            <Rectangle Height="1" 
                                      Fill="{StaticResource ModernBorderBrush}"/>
                            
                            <TextBlock Text="ITEM INFORMATION" 
                                      FontSize="12" 
                                      FontWeight="SemiBold"
                                      Foreground="{StaticResource ModernTextSecondaryBrush}"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Spacing="4">
                                    <TextBlock Text="Created" 
                                              FontSize="12" 
                                              Foreground="{StaticResource ModernTextSecondaryBrush}"/>
                                    <TextBlock Text="{Binding SelectedPasswordItem.CreatedAt, StringFormat='{}{0:MMM dd, yyyy}'}" 
                                              FontSize="12"
                                              Foreground="{StaticResource ModernTextPrimaryBrush}"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" Spacing="4">
                                    <TextBlock Text="Modified" 
                                              FontSize="12" 
                                              Foreground="{StaticResource ModernTextSecondaryBrush}"/>
                                    <TextBlock Text="{Binding SelectedPasswordItem.LastModified, StringFormat='{}{0:MMM dd, yyyy}'}" 
                                              FontSize="12"
                                              Foreground="{StaticResource ModernTextPrimaryBrush}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                        
                    </StackPanel>
                    
                    <!-- Empty State -->
                    <StackPanel Spacing="16" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center">
                        <FontIcon Glyph="&#xE8F1;" 
                                 FontSize="48" 
                                 Foreground="{StaticResource ModernTextTertiaryBrush}"/>
                        <TextBlock Text="Select an item to view details" 
                                  FontSize="16"
                                  Foreground="{StaticResource ModernTextSecondaryBrush}"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                </ScrollViewer>
            </Border>
            
        </Grid>
    </Grid>
</Page>