<Page x:Class="PasswordManager.WinUi.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:converters="using:PasswordManager.WinUi.Converters"
    xmlns:models="using:PasswordManager.Models"
      Background="{StaticResource ModernBackgroundBrush}">

    <Page.Resources>
    <converters:WebsiteUrlToColorConverter x:Key="WebsiteToColorConverter"/>
    <converters:WebsiteUrlToLetterConverter x:Key="WebsiteToLetterConverter"/>
    </Page.Resources>

    <!-- Top Toolbar -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar Row -->
    <Border Grid.Row="0" 
        Background="{StaticResource ModernCardBrush}" 
                BorderThickness="0,0,0,1" 
                BorderBrush="{StaticResource ModernBorderBrush}">
            <Grid Margin="16,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Search Box -->
                <AutoSuggestBox Grid.Column="0"
                               x:Name="SearchBox"
                               QueryIcon="Find"
                               PlaceholderText="Search passwords..."
                               MinWidth="300"
                               MaxWidth="400"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Style="{StaticResource ModernAutoSuggestBoxStyle}"
                               TextChanged="SearchBox_TextChanged"
                               QuerySubmitted="SearchBox_QuerySubmitted"
                               CornerRadius="20"/>
                
                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal" 
                           Spacing="12"
                           VerticalAlignment="Center"
                           Margin="16,0">
                    
              <Button x:Name="NewItemButton"
        Content="New Item"
        Style="{StaticResource ModernPrimaryButtonStyle}"
        Command="{Binding BeginCreateCommand}">
    <Button.Template>
        <ControlTemplate TargetType="Button">
            <Border x:Name="Border"
                   Background="{StaticResource ModernPrimaryBrush}"
                   CornerRadius="6"
                   Padding="16,8">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE109;" FontSize="14" Foreground="White"/>
                    <TextBlock Text="{TemplateBinding Content}" 
                              FontWeight="SemiBold" 
                              FontSize="14"
                              Foreground="White"/>
                </StackPanel>
            </Border>
        </ControlTemplate>
    </Button.Template>
</Button>
                    
              <Button x:Name="EditButton"
        Style="{StaticResource ModernSecondaryButtonStyle}"
        Command="{Binding BeginEditCommand}"
        IsEnabled="{Binding SelectedPasswordItem, Converter={StaticResource NotNullToBoolConverter}}">
    <Button.Template>
        <ControlTemplate TargetType="Button">
            <Border x:Name="Border"
                    Background="Transparent"
                    CornerRadius="6"
                    Padding="16,8">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE70F;" FontSize="14" Foreground="{StaticResource ModernTextPrimaryBrush}"/>
                    <TextBlock Text="Edit" 
                              FontWeight="SemiBold" 
                              FontSize="14"
                              Foreground="{StaticResource ModernTextPrimaryBrush}"/>
                </StackPanel>
            </Border>
        </ControlTemplate>
    </Button.Template>
</Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main 3-Column Layout -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="340" MinWidth="280"/>
                <ColumnDefinition Width="*" MinWidth="400"/>
            </Grid.ColumnDefinitions>

            <!-- Column 1: Password Items List -->
            <Border Grid.Column="0" 
                    Background="White"
                    BorderThickness="0,0,1,0"
                    BorderBrush="#e1e5e9">
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- List Header -->
                    <Border Grid.Row="0" 
                           Padding="16,12" 
                           BorderThickness="0,0,0,1"
                           BorderBrush="#e1e5e9">
                        <TextBlock Text="All Items" 
                                  FontWeight="SemiBold" 
                                  FontSize="14"
                                  Foreground="#374151"/>
                    </Border>
                    
                    <!-- Items List -->
                    <ListView Grid.Row="1" 
                             x:Name="PasswordItemsList"
                             ItemsSource="{Binding AllPasswordItems}"
                             SelectedItem="{Binding SelectedPasswordItem, Mode=TwoWay}"
                             SelectionMode="Single"
                             SelectionChanged="PasswordItemsList_SelectionChanged"
                             Background="Transparent"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                        
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="16,12" 
                                       Background="Transparent"
                                       BorderThickness="0,0,0,1"
                                       BorderBrush="#e1e5e9">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Website Favicon/Icon -->
                                        <Border Grid.Column="0" 
                                               Width="32" 
                                               Height="32"
                                               CornerRadius="6"
                                               Background="{Binding Website, Converter={StaticResource WebsiteToColorConverter}}"
                                               VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Website, Converter={StaticResource WebsiteToLetterConverter}}" 
                                                      FontWeight="Bold" 
                                                      FontSize="14"
                                                      Foreground="White"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </Border>
                                        
                                        <!-- Title and Username -->
                                        <StackPanel Grid.Column="1" 
                                                   Margin="12,0,8,0" 
                                                   VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Title}" 
                                                      FontWeight="SemiBold" 
                                                      FontSize="14"
                                                      Foreground="#374151"
                                                      TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding Username, FallbackValue='No username'}" 
                                                      FontSize="12"
                                                      Foreground="#6b7280"
                                                      TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                        
                                        <!-- Favorite Icon -->
                                        <FontIcon Grid.Column="2" 
                                                 Glyph="&#xE734;" 
                                                 FontSize="14"
                                                 Foreground="#f59e0b"
                                                 VerticalAlignment="Center"
                                                 Visibility="{Binding IsFavorite, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Grid>
            </Border>

            <!-- Column 2: Password Detail / Edit Form -->
            <Border Grid.Column="1" 
                    Background="{StaticResource ModernBackgroundBrush}">
                
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                             HorizontalScrollBarVisibility="Disabled"
                             Padding="24">
                    <!-- ScrollViewer can only have a single Content element in WinUI; wrap multiple sections in a Grid -->
                    <Grid>
                        <!-- Inline Edit/Create Panel -->
                        <StackPanel x:Name="EditPanel" Spacing="16" Visibility="{Binding IsInEditMode, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="Edit Item" FontSize="18" FontWeight="SemiBold"/>

                            <!-- Title -->
                            <StackPanel Spacing="8">
                                <TextBlock Text="Title" FontSize="12" Foreground="{StaticResource ModernTextSecondaryBrush}"/>
                                <TextBox Text="{Binding EditItem.Title, Mode=TwoWay}" Style="{StaticResource ModernTextBoxStyle}"/>
                            </StackPanel>

                            <!-- Type and Favorite -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Spacing="8">
                                    <TextBlock Text="Type" FontSize="12" Foreground="{StaticResource ModernTextSecondaryBrush}"/>
                                    <ComboBox SelectedValue="{Binding EditItem.Type, Mode=TwoWay}" SelectedValuePath="Tag" Style="{StaticResource ModernComboBoxStyle}">
                                        <ComboBoxItem Content="Login" Tag="{x:Bind models:ItemType.Login, Mode=OneTime}"/>
                                        <ComboBoxItem Content="Credit Card" Tag="{x:Bind models:ItemType.CreditCard, Mode=OneTime}"/>
                                        <ComboBoxItem Content="Secure Note" Tag="{x:Bind models:ItemType.SecureNote, Mode=OneTime}"/>
                                        <ComboBoxItem Content="WiFi" Tag="{x:Bind models:ItemType.WiFi, Mode=OneTime}"/>
                                        <ComboBoxItem Content="Passkey" Tag="{x:Bind models:ItemType.Passkey, Mode=OneTime}"/>
                                        <ComboBoxItem Content="Password" Tag="{x:Bind models:ItemType.Password, Mode=OneTime}"/>
                                    </ComboBox>
                                </StackPanel>
                                <CheckBox Grid.Column="1" Content="★ Favorite" IsChecked="{Binding EditItem.IsFavorite, Mode=TwoWay}" VerticalAlignment="Bottom"/>
                            </Grid>

                            <!-- Username -->
                            <StackPanel Spacing="8">
                                <TextBlock Text="Username" FontSize="12" Foreground="{StaticResource ModernTextSecondaryBrush}"/>
                                <TextBox Text="{Binding EditItem.Username, Mode=TwoWay}" Style="{StaticResource ModernTextBoxStyle}"/>
                            </StackPanel>

                            <!-- Password -->
                            <StackPanel Spacing="8">
                                <TextBlock Text="Password" FontSize="12" Foreground="{StaticResource ModernTextSecondaryBrush}"/>
                                <PasswordBox x:Name="InlinePasswordBox" PasswordChanged="InlinePasswordBox_PasswordChanged" Style="{StaticResource ModernPasswordBoxStyle}"/>
                            </StackPanel>

                            <!-- Website -->
                            <StackPanel Spacing="8">
                                <TextBlock Text="Website" FontSize="12" Foreground="{StaticResource ModernTextSecondaryBrush}"/>
                                <TextBox Text="{Binding EditItem.Website, Mode=TwoWay}" Style="{StaticResource ModernTextBoxStyle}"/>
                            </StackPanel>

                            <!-- Actions -->
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <Button x:Name="SaveInlineButton" Style="{StaticResource ModernPrimaryButtonStyle}" Click="SaveInlineButton_Click">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE74E;" FontSize="14"/>
                                        <TextBlock Text="Save"/>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="CancelInlineButton" Style="{StaticResource ModernSecondaryButtonStyle}" Click="CancelInlineButton_Click">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE711;" FontSize="14"/>
                                        <TextBlock Text="Cancel"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </StackPanel>

                        <!-- Read-only Details Panel -->
                        <StackPanel Spacing="24" Visibility="{Binding IsInEditMode, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        
                        <!-- Header with Icon and Title -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Large Icon -->
                            <Border Grid.Column="0" 
                                   Width="64" 
                                   Height="64"
                                   CornerRadius="12"
                                   Background="{StaticResource ModernAccentBrush}"
                                   Margin="0,0,16,0">
                                <TextBlock Text="{Binding SelectedPasswordItem.Title, FallbackValue='?'}" 
                                          FontWeight="Bold" 
                                          FontSize="20"
                                          Foreground="White"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Border>
                            
                            <!-- Title and Description -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding SelectedPasswordItem.Title}" 
                                          FontWeight="Bold" 
                                          FontSize="18"
                                          Foreground="{StaticResource ModernTextPrimaryBrush}"/>
                                <TextBlock Text="{Binding SelectedPasswordItem.Website, FallbackValue='No website'}" 
                                          FontSize="14"
                                          Foreground="{StaticResource ModernTextSecondaryBrush}"/>
                            </StackPanel>
                            
                            <!-- Favorite Toggle -->
                            <CheckBox Grid.Column="2" 
                                     IsChecked="{Binding SelectedPasswordItem.IsFavorite, Mode=TwoWay}"
                                     Content="★"
                                     FontSize="20"
                                     VerticalAlignment="Center"/>
                        </Grid>
                        
                        <!-- Form Fields -->
                        <StackPanel Spacing="16">
                            
                            <!-- Username -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" 
                                          Text="username" 
                                          FontSize="12"
                                          Foreground="{StaticResource ModernTextSecondaryBrush}"
                                          VerticalAlignment="Center"/>
                                
                                <TextBox Grid.Column="1" 
                                        Text="{Binding SelectedPasswordItem.Username, Mode=TwoWay}"
                                        Style="{StaticResource ModernTextBoxStyle}"
                                        Margin="0,0,8,0"/>
                                
                    <Button Grid.Column="2" 
                        Content="📋"
                        Click="CopyUsernameButton_Click"
                        ToolTipService.ToolTip="Copy username"/>
                            </Grid>
                            
                            <!-- Password -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" 
                                          Text="password" 
                                          FontSize="12"
                                          Foreground="{StaticResource ModernTextSecondaryBrush}"
                                          VerticalAlignment="Center"/>
                                
                                <PasswordBox Grid.Column="1" 
                                            x:Name="PasswordField"
                                            Password="{Binding SelectedPasswordItem.Password, Mode=TwoWay}"
                                            Style="{StaticResource ModernPasswordBoxStyle}"
                                            Margin="0,0,8,0"/>
                                
                    <Button Grid.Column="2" 
                        Content="👁"
                        Click="TogglePasswordVisibilityButton_Click"
                        ToolTipService.ToolTip="Show/Hide password"
                        Margin="0,0,4,0"/>
                                
                    <Button Grid.Column="3" 
                        Content="📋"
                        Click="CopyPasswordButton_Click"
                        ToolTipService.ToolTip="Copy password"/>
                            </Grid>
                            
                            <!-- Website -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" 
                                          Text="website" 
                                          FontSize="12"
                                          Foreground="{StaticResource ModernTextSecondaryBrush}"
                                          VerticalAlignment="Center"/>
                                
                                <TextBox Grid.Column="1" 
                                        Text="{Binding SelectedPasswordItem.Website, Mode=TwoWay}"
                                        Style="{StaticResource ModernTextBoxStyle}"
                                        Margin="0,0,8,0"/>
                                
                    <Button Grid.Column="2" 
                        Content="🌐"
                        Click="OpenWebsiteButton_Click"
                        ToolTipService.ToolTip="Open website"/>
                            </Grid>
                            
                        </StackPanel>
                        
                        <!-- Metadata -->
                        <StackPanel Spacing="8">
                            <Rectangle Height="1" 
                                      Fill="{StaticResource ModernBorderBrush}"/>
                            
                            <TextBlock Text="ITEM INFORMATION" 
                                      FontSize="12" 
                                      FontWeight="SemiBold"
                                      Foreground="{StaticResource ModernTextSecondaryBrush}"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Spacing="4">
                                    <TextBlock Text="Created" 
                                              FontSize="12" 
                                              Foreground="{StaticResource ModernTextSecondaryBrush}"/>
                                    <TextBlock Text="{Binding SelectedPasswordItem.CreatedAt, Converter={StaticResource DateFormatConverter}}" 
                                              FontSize="12"
                                              Foreground="{StaticResource ModernTextPrimaryBrush}"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" Spacing="4">
                                    <TextBlock Text="Modified" 
                                              FontSize="12" 
                                              Foreground="{StaticResource ModernTextSecondaryBrush}"/>
                                    <TextBlock Text="{Binding SelectedPasswordItem.LastModified, Converter={StaticResource DateFormatConverter}}" 
                                              FontSize="12"
                                              Foreground="{StaticResource ModernTextPrimaryBrush}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                        
                        </StackPanel>
                    
                    <!-- Empty State -->
                    <StackPanel Spacing="16" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Visibility="{Binding SelectedPasswordItem, Converter={StaticResource NotNullToInvertedVisibilityConverter}}">
                        <FontIcon Glyph="&#xE8F1;" 
                                 FontSize="48" 
                                 Foreground="{StaticResource ModernTextTertiaryBrush}"/>
                        <TextBlock Text="Select an item to view details" 
                                  FontSize="16"
                                  Foreground="{StaticResource ModernTextSecondaryBrush}"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                    </Grid>
                </ScrollViewer>
            </Border>
            
        </Grid>
    </Grid>
</Page>