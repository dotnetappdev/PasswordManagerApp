<Page x:Class="PasswordManager.WinUi.Views.CategoriesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource ModernBackgroundBrush}">

    <ScrollViewer>
        <StackPanel Spacing="24" Margin="0,0,0,24">
            
            <!-- Page Header -->
            <Border Style="{StaticResource ModernCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Border Background="{StaticResource ModernSuccessBrush}"
                                   CornerRadius="12"
                                   Width="32"
                                   Height="32">
                                <FontIcon Glyph="&#xE8FD;" 
                                         FontSize="16"
                                         Foreground="White"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Categories" 
                                      Style="{StaticResource ModernHeading3Style}"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="Organize your passwords with custom categories"
                                  Style="{StaticResource ModernCaptionStyle}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
                        <Button x:Name="RefreshButton"
                               Style="{StaticResource ModernSecondaryButtonStyle}"
                               Click="RefreshButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE72C;" FontSize="14"/>
                                <TextBlock Text="Refresh"/>
                            </StackPanel>
                        </Button>
                        
                        <Button x:Name="AddCategoryButton"
                               Style="{StaticResource ModernPrimaryButtonStyle}"
                               Click="AddCategoryButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE109;" FontSize="14"/>
                                <TextBlock Text="Add Category"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Search -->
            <Border Style="{StaticResource ModernCardStyle}">
                <StackPanel Spacing="8">
                    <TextBlock Text="Search Categories" 
                              Style="{StaticResource ModernCaptionStyle}"
                              FontWeight="SemiBold"/>
                    <TextBox x:Name="SearchTextBox"
                            PlaceholderText="🔍 Search categories..."
                            Text="{Binding SearchText, Mode=TwoWay}"
                            Style="{StaticResource ModernTextBoxStyle}"/>
                </StackPanel>
            </Border>
            
            <!-- Categories Content -->
            <Grid MinHeight="400">
                
                <!-- Loading Indicator -->
                <Border Style="{StaticResource ModernCardStyle}"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Padding="48"
                       Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel Spacing="20" HorizontalAlignment="Center">
                        <ProgressRing IsActive="True" Width="48" Height="48"/>
                        <TextBlock Text="Loading categories..." 
                                  Style="{StaticResource ModernBodyStyle}"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Categories GridView -->
                <GridView x:Name="CategoriesGridView"
                         ItemsSource="{Binding Categories}"
                         Visibility="{Binding IsLoading, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                         SelectionMode="Single"
                         SelectionChanged="CategoriesGridView_SelectionChanged">
                    
                    <GridView.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource ModernCardStyle}" 
                                   Width="240"
                                   Height="160">
                                
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Category Header -->
                                    <StackPanel Grid.Row="0" Spacing="12" Margin="0,0,0,16">
                                        <Border Background="{StaticResource ModernPrimaryGradientBrush}"
                                               CornerRadius="10"
                                               Width="40"
                                               Height="40"
                                               HorizontalAlignment="Left">
                                            <FontIcon Glyph="&#xE8FD;" 
                                                     FontSize="18"
                                                     Foreground="White"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"/>
                                        </Border>
                                        
                                        <TextBlock Text="{Binding Name}" 
                                                  Style="{StaticResource ModernBodyStyle}"
                                                  FontWeight="SemiBold"
                                                  TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                    
                                    <!-- Description -->
                                    <TextBlock Grid.Row="1"
                                              Text="{Binding Description}" 
                                              Style="{StaticResource ModernCaptionStyle}"
                                              TextWrapping="Wrap"
                                              VerticalAlignment="Top"
                                              Visibility="{Binding Description, Converter={StaticResource StringToVisibilityConverter}}"/>
                                    
                                    <!-- Actions -->
                                    <StackPanel Grid.Row="2" 
                                               Orientation="Horizontal" 
                                               HorizontalAlignment="Right"
                                               Spacing="8">
                                        <Button Style="{StaticResource ModernSecondaryButtonStyle}"
                                               Padding="12,8"
                                               Click="EditCategoryButton_Click">
                                            <FontIcon Glyph="&#xE70F;" FontSize="14"/>
                                        </Button>
                                        <Button Background="Transparent"
                                               BorderBrush="{StaticResource ModernErrorBrush}"
                                               BorderThickness="1.5"
                                               Foreground="{StaticResource ModernErrorBrush}"
                                               CornerRadius="8"
                                               Padding="12,8"
                                               Click="DeleteCategoryButton_Click">
                                            <FontIcon Glyph="&#xE74D;" FontSize="14"/>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                                
                            </Border>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                    
                    <GridView.ItemContainerStyle>
                        <Style TargetType="GridViewItem">
                            <Setter Property="Margin" Value="0,0,16,16"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                        </Style>
                    </GridView.ItemContainerStyle>
                    
                </GridView>
                
                <!-- Empty State -->
                <Border Style="{StaticResource ModernElevatedCardStyle}"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Padding="48"
                       Visibility="{Binding HasNoCategories, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel Spacing="20" HorizontalAlignment="Center">
                        <Border Background="{StaticResource ModernSuccessBrush}"
                               CornerRadius="24"
                               Width="80"
                               Height="80"
                               HorizontalAlignment="Center">
                            <FontIcon Glyph="&#xE8FD;" 
                                     FontSize="36"
                                     Foreground="White"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"/>
                        </Border>
                        
                        <StackPanel Spacing="8" HorizontalAlignment="Center">
                            <TextBlock Text="No categories found" 
                                      Style="{StaticResource ModernHeading3Style}"
                                      HorizontalAlignment="Center"/>
                            <TextBlock Text="Create your first category to organize your passwords" 
                                      Style="{StaticResource ModernCaptionStyle}"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>

                        <Button Style="{StaticResource ModernPrimaryButtonStyle}"
        Click="AddCategoryButton_Click">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE109;" FontSize="16"/>
                                    <TextBlock Text="Add Your First Category"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </StackPanel>
                </Border>
                
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>