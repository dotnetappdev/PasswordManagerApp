<Page x:Class="PasswordManager.WinUi.Views.ImportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource ModernBackgroundBrush}">

    <ScrollViewer>
        <StackPanel Spacing="24" Margin="0,0,0,24">
            
            <!-- Page Header -->
            <Border Style="{StaticResource ModernCardStyle}">
                <StackPanel Spacing="12">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Border Background="{StaticResource ModernWarningBrush}"
                               CornerRadius="12"
                               Width="32"
                               Height="32">
                            <FontIcon Glyph="&#xE8B5;" 
                                     FontSize="16"
                                     Foreground="White"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Import Passwords" 
                                  Style="{StaticResource ModernHeading3Style}"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="Import passwords from other password managers or CSV files"
                              Style="{StaticResource ModernCaptionStyle}"/>
                </StackPanel>
            </Border>
            
            <!-- Import Configuration -->
            <Border Style="{StaticResource ModernCardStyle}">
                <StackPanel Spacing="20">
                    <TextBlock Text="Configuration" 
                              Style="{StaticResource ModernHeading3Style}"/>
                    
                    <!-- Import Type Selection -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Import Source" 
                                  Style="{StaticResource ModernCaptionStyle}"
                                  FontWeight="SemiBold"/>
                        <ComboBox x:Name="ImportTypeComboBox"
                                 ItemsSource="{Binding AvailableImportTypes}"
                                 SelectedItem="{Binding SelectedImportType, Mode=TwoWay}"
                                 Style="{StaticResource ModernComboBoxStyle}"
                                 MinWidth="240"
                                 SelectionChanged="ImportTypeComboBox_SelectionChanged"/>
                    </StackPanel>
                    
                    <!-- File Selection -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Select File" 
                                  Style="{StaticResource ModernCaptionStyle}"
                                  FontWeight="SemiBold"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0"
                                    Text="{Binding SelectedFilePath, Mode=TwoWay}"
                                    PlaceholderText="Choose a file to import..."
                                    IsReadOnly="True"
                                    Style="{StaticResource ModernTextBoxStyle}"
                                    Margin="0,0,8,0"/>
                            
                            <Button Grid.Column="1"
                                   x:Name="BrowseFileButton"
                                   Style="{StaticResource ModernSecondaryButtonStyle}"
                                   Click="BrowseFileButton_Click">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE8DA;" FontSize="14"/>
                                    <TextBlock Text="Browse"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>
                    
                    <!-- Import Button -->
                    <Button x:Name="ImportButton"
                           Style="{StaticResource ModernPrimaryButtonStyle}"
                           IsEnabled="{Binding CanImport}"
                           HorizontalAlignment="Left"
                           Click="ImportButton_Click">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE8B5;" FontSize="16"/>
                            <TextBlock Text="Start Import"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>
            
            <!-- Import Results -->
            <Grid MinHeight="400">
                
                <!-- Loading State -->
                <Border Style="{StaticResource ModernCardStyle}"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Padding="48"
                       Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel Spacing="20" HorizontalAlignment="Center">
                        <ProgressRing IsActive="True" Width="48" Height="48"/>
                        <TextBlock Text="{Binding ImportStatus}" 
                                  Style="{StaticResource ModernBodyStyle}"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Import Results Panel -->
                <StackPanel Visibility="{Binding HasImportCompleted, Converter={StaticResource BoolToVisibilityConverter}}"
                           Spacing="20">
                    
                    <!-- Summary Cards -->
                    <Border Style="{StaticResource ModernCardStyle}">
                        <StackPanel Spacing="16">
                            <TextBlock Text="Import Summary" 
                                      Style="{StaticResource ModernHeading3Style}"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Border Grid.Column="0" 
                                       Background="{StaticResource ModernSuccessBrush}" 
                                       CornerRadius="12" 
                                       Padding="16,12" 
                                       Margin="0,0,8,0">
                                    <StackPanel Spacing="8" HorizontalAlignment="Center">
                                        <FontIcon Glyph="&#xE73E;" FontSize="20" Foreground="White"/>
                                        <TextBlock Text="{Binding ImportedItemsCount}" 
                                                  Foreground="White" 
                                                  FontWeight="Bold"
                                                  FontSize="24"
                                                  HorizontalAlignment="Center"/>
                                        <TextBlock Text="Imported" 
                                                  Foreground="White"
                                                  FontSize="12"
                                                  HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                
                                <Border Grid.Column="1" 
                                       Background="{StaticResource ModernWarningBrush}" 
                                       CornerRadius="12" 
                                       Padding="16,12" 
                                       Margin="4,0,4,0">
                                    <StackPanel Spacing="8" HorizontalAlignment="Center">
                                        <FontIcon Glyph="&#xE7BA;" FontSize="20" Foreground="White"/>
                                        <TextBlock Text="{Binding SkippedItemsCount}" 
                                                  Foreground="White" 
                                                  FontWeight="Bold"
                                                  FontSize="24"
                                                  HorizontalAlignment="Center"/>
                                        <TextBlock Text="Skipped" 
                                                  Foreground="White"
                                                  FontSize="12"
                                                  HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                
                                <Border Grid.Column="2" 
                                       Background="{StaticResource ModernErrorBrush}" 
                                       CornerRadius="12" 
                                       Padding="16,12"
                                       Margin="8,0,0,0">
                                    <StackPanel Spacing="8" HorizontalAlignment="Center">
                                        <FontIcon Glyph="&#xE783;" FontSize="20" Foreground="White"/>
                                        <TextBlock Text="{Binding ErrorItemsCount}" 
                                                  Foreground="White" 
                                                  FontWeight="Bold"
                                                  FontSize="24"
                                                  HorizontalAlignment="Center"/>
                                        <TextBlock Text="Errors" 
                                                  Foreground="White"
                                                  FontSize="12"
                                                  HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Detailed Results -->
                    <Border Style="{StaticResource ModernCardStyle}"
                           Visibility="{Binding HasResults, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel Spacing="16">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="Import Details" 
                                          Style="{StaticResource ModernHeading3Style}"/>
                                <Button x:Name="ClearResultsButton"
                                       Style="{StaticResource ModernSecondaryButtonStyle}"
                                       Padding="8"
                                       Click="ClearResultsButton_Click">
                                    <FontIcon Glyph="&#xE74D;" FontSize="14"/>
                                </Button>
                            </StackPanel>
                            
                            <ListView ItemsSource="{Binding ImportResults}"
                                     MaxHeight="300"
                                     Background="Transparent"
                                     SelectionMode="None">
                                
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource ModernCardStyle}"
                                               Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!-- Status Icon -->
                                                <Border Grid.Column="0"
                                                       Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                                       CornerRadius="10"
                                                       Width="32"
                                                       Height="32"
                                                       Margin="0,0,12,0"
                                                       VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Status, Converter={StaticResource StatusToIconConverter}}"
                                                              FontSize="14"
                                                              Foreground="White"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                                </Border>
                                                
                                                <!-- Item Info -->
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                                                    <TextBlock Text="{Binding Title}" 
                                                              Style="{StaticResource ModernBodyStyle}"
                                                              FontWeight="SemiBold"
                                                              TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock Text="{Binding Message}" 
                                                              Style="{StaticResource ModernCaptionStyle}"
                                                              TextTrimming="CharacterEllipsis"
                                                              Visibility="{Binding Message, Converter={StaticResource StringToVisibilityConverter}}"/>
                                                </StackPanel>
                                                
                                                <!-- Item Type -->
                                                <Border Grid.Column="2"
                                                       Background="{StaticResource ModernTextTertiaryBrush}"
                                                       CornerRadius="8"
                                                       Padding="8,4"
                                                       Margin="8,0"
                                                       VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding ItemType}" 
                                                              FontSize="12"
                                                              Foreground="White"
                                                              FontWeight="SemiBold"/>
                                                </Border>
                                                
                                                <!-- Status Text -->
                                                <Border Grid.Column="3"
                                                       Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                                       CornerRadius="12"
                                                       Padding="12,6"
                                                       VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Status}" 
                                                              FontSize="11"
                                                              Foreground="White"
                                                              FontWeight="Bold"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                                
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="Margin" Value="0"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                            </ListView>
                        </StackPanel>
                    </Border>
                    
                </StackPanel>
                
                <!-- Empty State -->
                <Border Style="{StaticResource ModernElevatedCardStyle}"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Padding="48"
                       Visibility="{Binding HasNoImport, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel Spacing="20" HorizontalAlignment="Center">
                        <Border Background="{StaticResource ModernWarningBrush}"
                               CornerRadius="24"
                               Width="80"
                               Height="80"
                               HorizontalAlignment="Center">
                            <FontIcon Glyph="&#xE8B5;" 
                                     FontSize="36"
                                     Foreground="White"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"/>
                        </Border>
                        
                        <StackPanel Spacing="8" HorizontalAlignment="Center">
                            <TextBlock Text="Ready to import" 
                                      Style="{StaticResource ModernHeading3Style}"
                                      HorizontalAlignment="Center"/>
                            <TextBlock Text="Select an import source and file to get started" 
                                      Style="{StaticResource ModernCaptionStyle}"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>