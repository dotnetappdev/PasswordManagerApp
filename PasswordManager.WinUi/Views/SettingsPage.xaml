<Page x:Class="PasswordManager.WinUi.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer>
        <StackPanel Padding="20" Spacing="20">
            <TextBlock Text="Settings" 
                      FontSize="24" 
                      FontWeight="Bold"/>
            
            <!-- Security Settings -->
            <StackPanel Spacing="10">
                <TextBlock Text="Security" 
                          FontSize="18" 
                          FontWeight="SemiBold"/>
                
                <ToggleSwitch Header="Enable Two-Factor Authentication" 
                             IsOn="False"/>
                
                <Button Content="Change Master Password" 
                       HorizontalAlignment="Left"/>
                
                <Button Content="Setup Passcode" 
                       HorizontalAlignment="Left"/>
            </StackPanel>
            
            <!-- Database Settings -->
            <StackPanel Spacing="10">
                <TextBlock Text="Database" 
                          FontSize="18" 
                          FontWeight="SemiBold"/>
                
                <ComboBox Header="Database Provider" 
                         PlaceholderText="Select provider">
                    <ComboBoxItem Content="SQLite"/>
                    <ComboBoxItem Content="SQL Server"/>
                    <ComboBoxItem Content="MySQL"/>
                    <ComboBoxItem Content="PostgreSQL"/>
                </ComboBox>
                
                <Button Content="Configure Database Connection" 
                       HorizontalAlignment="Left"/>
            </StackPanel>
            
            <!-- Import/Export Settings -->
            <StackPanel Spacing="10">
                <TextBlock Text="Import/Export" 
                          FontSize="18" 
                          FontWeight="SemiBold"/>
                
                <Button Content="Export Passwords" 
                       HorizontalAlignment="Left"/>
                
                <Button Content="Import from 1Password" 
                       HorizontalAlignment="Left"/>
                
                <Button Content="Import from Bitwarden" 
                       HorizontalAlignment="Left"/>
            </StackPanel>
            
            <!-- Appearance Settings -->
            <StackPanel Spacing="10">
                <TextBlock Text="Appearance" 
                          FontSize="18" 
                          FontWeight="SemiBold"/>
                
                <ComboBox Header="Theme" 
                         PlaceholderText="Select theme">
                    <ComboBoxItem Content="Light"/>
                    <ComboBoxItem Content="Dark"/>
                    <ComboBoxItem Content="System Default"/>
                </ComboBox>
            </StackPanel>
            
        </StackPanel>
    </ScrollViewer>
</Page>