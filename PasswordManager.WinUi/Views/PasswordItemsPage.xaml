<Page x:Class="PasswordManager.WinUi.Views.PasswordItemsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Padding="20">
        <StackPanel>
            <TextBlock Text="Password Items" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Margin="0,0,0,20"/>
            
            <!-- Search Box -->
            <TextBox PlaceholderText="Search passwords..."
                    Margin="0,0,0,20"
                    Width="300"
                    HorizontalAlignment="Left"/>
            
            <!-- Passwords List -->
            <ListView>
                <ListViewItem Content="Sample Password 1"/>
                <ListViewItem Content="Sample Password 2"/>
                <ListViewItem Content="Sample Password 3"/>
            </ListView>
        </StackPanel>
    </Grid>
</Page>