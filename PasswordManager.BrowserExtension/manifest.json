{
  "manifest_version": 3,
  "name": "Password Manager Extension",
  "version": "1.0.0",
  "description": "Browser extension for the Password Manager App - securely autofill login credentials and generate passwords",
  
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "unlimitedStorage"
  ],
  
  "host_permissions": [
    "http://localhost:*/*",
    "https://localhost:*/*",
    "http://*/*",
    "https://*/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Password Manager",
    "default_icon": {
      "16": "icons/icon16.svg",
      "32": "icons/icon32.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  
  "icons": {
    "16": "icons/icon16.svg",
    "32": "icons/icon32.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "content.css", "lib/*"],
      "matches": ["<all_urls>"]
    }
  ]
}