        if (domain.StartsWith("http"))
        {
            try
            {
                var uri = new Uri(domain);
                domain = uri.Host;
            }
            catch { }
        }
        // Remove www.
        if (domain.StartsWith("www."))
            domain = domain.Substring(4);
        // Remove TLD
        var parts = domain.Split('.');
        if (parts.Length > 2)
            domain = parts[parts.Length - 2];
        else if (parts.Length == 2)
            domain = parts[0];
        // Remove non-alphanumeric
